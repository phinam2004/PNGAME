<!-- sidebar -->
<aside id="sidebar" class="fixed inset-y-0 <% if (isRTL) { %>right-0 translate-x-full<% } else { %>left-0 -translate-x-full<% } %> w-80 max-w-[85vw] bg-white dark:bg-gray-900 shadow-2xl
transform transition-transform duration-300
ease-out z-50 overflow-auto overscroll-contain scrollbar-none hover:scrollbar-thin hover:scrollbar-thumb-gray-300 dark:hover:scrollbar-thumb-gray-600 hover:scrollbar-track-gray-100 dark:hover:scrollbar-track-gray-800">
    <!-- logo + close -->
    <div class="flex items-center justify-between px-6 py-4 border-b border-gray-100 dark:border-gray-800 sticky top-0 bg-white dark:bg-gray-900 z-10">
        <div class="flex items-center space-x-3">
            <% if (site_logo) { %>
                <%
                let logoData;
                try {
                    logoData = typeof site_logo === 'string' && site_logo.startsWith('{') ? JSON.parse(site_logo) : null;
                } catch (e) {
                    logoData = null;
                }
                %>
                <% if (logoData && logoData.webp && logoData.webp.standard) { %>
                    <picture>
                        <source srcset="/<%= logoData.webp.standard.relativePath %>" type="image/webp">
                        <% if (logoData.original) { %>
                            <source srcset="/<%= logoData.original.relativePath %>" type="image/<%= logoData.original.format %>">
                        <% } %>
                        <img src="/<%= logoData.webp.standard.relativePath %>" alt="<%= site_name || 'ARCADE' %> Logo" class="h-12 w-auto max-w-none" />
                    </picture>
                <% } else { %>
                    <img src="<%= site_logo.startsWith('/') ? site_logo : '/' + site_logo %>" alt="<%= site_name || 'ARCADE' %> Logo" class="h-12 w-auto max-w-none" />
                <% } %>
            <% } else { %>
                <img src="/assets/images/logo.png" alt="<%= site_name || 'ARCADE' %> Logo" class="h-12 w-auto max-w-none" />
            <% } %>
        </div>
        <button id="closeBtn"
            class="p-2 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-full transition-colors duration-200 touch-manipulation">
            <svg class="w-6 h-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>

    <!-- navigation -->
    <nav class="px-6 py-8 space-y-2">
        <!-- Featured Games -->
        <a href="/games/featured"
            class="flex items-center space-x-4 p-3 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-yellow-50 dark:hover:bg-yellow-900/20 rounded-xl transition-all duration-200 touch-manipulation" system-nav>
            <svg class="w-6 h-6 text-yellow-500 dark:text-yellow-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
            <span class="font-medium"><%= __('nav.featured_games') %></span>
        </a>
        <!-- New Games -->
        <a href="/games"
            class="flex items-center space-x-4 p-3 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-gray-50 dark:hover:bg-pink-900/20 rounded-xl transition-all duration-200 touch-manipulation" system-nav>
            <svg class="w-6 h-6 text-pink-500 dark:text-pink-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            <span class="font-medium"><%= __('nav.new_games') %></span>
        </a>
        <a href="/games/trending"
            class="flex items-center space-x-4 p-3 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-gray-50 dark:hover:bg-green-900/20 rounded-xl transition-all duration-200 touch-manipulation" system-nav>
            <svg class="w-6 h-6 text-green-500 dark:text-green-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
            <span class="font-medium"><%= __('nav.trending_now') %></span>
        </a>
        <a href="/games/popular"
            class="flex items-center space-x-4 p-3 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-gray-50 dark:hover:bg-yellow-900/20 rounded-xl transition-all duration-200 touch-manipulation" system-nav>
            <svg class="w-6 h-6 text-yellow-500 dark:text-yellow-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
            <span class="font-medium"><%= __('nav.popular_games') %></span>
        </a>

        <hr class="border-gray-200 dark:border-gray-700 my-6" />

        <!-- Virtual Chat -->
        <a href="/chatroom" target="_blank"
            class="flex items-center space-x-4 p-3 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-purple-50 dark:hover:bg-purple-900/20 rounded-xl transition-all duration-200 touch-manipulation">
            <svg class="w-6 h-6 text-purple-500 dark:text-purple-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            <div class="flex-1">
                <span class="font-medium"><%= __('chatroom.virtual_chat') %></span>
                <div class="text-xs text-gray-500 dark:text-gray-400">
                    <span id="sidebarPlayerCount">0</span> <%= __('notifications.online') %>
                </div>
            </div>
        </a>

        <hr class="border-gray-200 dark:border-gray-700 my-6" />

        <!-- Categories -->
        <% if (sidebarCategories && sidebarCategories.length > 0) { %>
            <% sidebarCategories.forEach(category => { %>
                <a href="/games/category/<%= category.slug %>"
                    class="flex items-center space-x-4 p-3 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-gray-50 dark:hover:bg-gray-800 rounded-xl transition-all duration-200 touch-manipulation" system-nav>
                    <% if (category.icon && !category.icon.includes('la-')) { %>
                        <img src="/assets/images/heroicons/<%= category.icon %>.svg" alt="<%= category.name %>" class="w-6 h-6 flex-shrink-0 category-icon" />
                    <% } else { %>
                        <svg class="w-6 h-6 flex-shrink-0" style="color: <%= category.color || '#6366F1' %>;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                        </svg>
                    <% } %>
                    <span class="font-medium"><%= category.name %></span>
                </a>
            <% }); %>
        <% } else { %>
            <!-- Fallback categories if none loaded -->
            <a href="/games"
                class="flex items-center space-x-4 p-3 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-gray-50 dark:hover:bg-gray-800 rounded-xl transition-all duration-200 touch-manipulation" system-nav>
                <svg class="w-6 h-6 text-blue-500 dark:text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1.01M15 10h1.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="font-medium"><%= __('games.all_games') %></span>
            </a>
        <% } %>

        <hr class="border-gray-200 dark:border-gray-700 my-6" />

        <!-- Leaderboard -->
        <a href="/leaderboard"
            class="flex items-center space-x-4 p-3 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-orange-50 dark:hover:bg-orange-900/20 rounded-xl transition-all duration-200 touch-manipulation" system-nav>
            <svg class="w-6 h-6 text-orange-500 dark:text-orange-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
            </svg>
            <span class="font-medium"><%= __('leaderboard.title') %></span>
        </a>

        <!-- Utility -->
        <a href="/games/recent"
            class="flex items-center space-x-4 p-3 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-gray-50 dark:hover:bg-gray-800 rounded-xl transition-all duration-200 touch-manipulation" system-nav>
            <svg class="w-6 h-6 text-gray-500 dark:text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="font-medium"><%= __('games.played_games') %></span>
        </a>
        <a href="/games/favorites"
            class="flex items-center space-x-4 p-3 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-gray-50 dark:hover:bg-purple-900/20 rounded-xl transition-all duration-200 touch-manipulation" system-nav>
            <svg class="w-6 h-6 text-purple-500 dark:text-purple-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
            <span class="font-medium"><%= __('games.favorite_games') %></span>
        </a>
        <a href="/games/top"
            class="flex items-center space-x-4 p-3 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-gray-50 dark:hover:bg-teal-900/20 rounded-xl transition-all duration-200 touch-manipulation" system-nav>
            <svg class="w-6 h-6 text-teal-500 dark:text-teal-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3l4 6l5-4l5 4l4-6v18H5V3z"></path>
            </svg>
            <span class="font-medium"><%= __('games.top_rated_games') %></span>
        </a>
        <a href="/games"
            class="flex items-center space-x-4 p-3 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-gray-50 dark:hover:bg-gray-800 rounded-xl transition-all duration-200 touch-manipulation" system-nav>
            <svg class="w-6 h-6 text-blue-400 dark:text-blue-300 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
            </svg>
            <span class="font-medium"><%= __('games.all_games') %></span>
        </a>
    </nav>
</aside>