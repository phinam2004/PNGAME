<!-- Banner -->
<div class="relative w-full h-64 sm:h-72 md:h-80 lg:h-96 flex items-end">
    <img src="/assets/images/hero.webp"
        alt="<%= listTitle || __('common.gaming') %> Banner" class="absolute inset-0 w-full h-full object-cover object-top" />
    <div class="absolute inset-0 bg-gradient-to-b from-gray-50/0 dark:from-gray-900/0 via-gray-50/20 dark:via-gray-900/20 to-gray-50 dark:to-gray-900"></div>
    <div
        class="relative z-10 flex flex-col sm:flex-row items-start sm:items-end px-6 sm:px-12 pb-8 w-full max-w-6xl mx-auto">
        <div class="flex items-center bg-blue-100 dark:bg-blue-900/50 rounded-2xl p-4 mr-6 mb-4 sm:mb-0">
            <% if (listType === 'featured') { %>
                <svg class="w-10 h-10 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                </svg>
            <% } else if (listType === 'popular') { %>
                <svg class="w-10 h-10 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14l4 4-6.121-1.879z"></path>
                </svg>
            <% } else if (listType === 'trending') { %>
                <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
            <% } else if (listType === 'top') { %>
                <svg class="w-10 h-10 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                </svg>
            <% } else { %>
                <svg class="w-10 h-10 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"/>
                </svg>
            <% } %>
        </div>
        <div>
            <h1 class="text-3xl sm:text-4xl font-extrabold text-gray-900 dark:text-gray-100 mb-2 flex items-center drop-shadow-lg">
                <%= listTitle || __('common.games') %>
            </h1>
            <p class="text-lg text-gray-700 dark:text-gray-200 font-medium mb-1 drop-shadow"><%= listDescription || __('common.discover_games') %></p>
            <% if (games && games.length > 0) { %>
            <p class="text-sm text-gray-500 dark:text-gray-300 drop-shadow"><%= games.length %> <%= games.length === 1 ? __('common.game') : __('common.games') %> <%= __('common.available_to_play') %></p>
            <% } else { %>
            <p class="text-sm text-gray-500 dark:text-gray-300 drop-shadow"><%= __('common.browse_library') %></p>
            <% } %>
        </div>
    </div>
</div>