<!-- overlay -->
<div id="overlay"
    class="fixed inset-0 bg-black bg-opacity-60 dark:bg-black dark:bg-opacity-80 hidden z-40 backdrop-blur-sm transition-opacity duration-300">
</div>

<!-- Footer -->
<footer class="bg-white dark:bg-gray-900 border-t border-gray-100 dark:border-gray-800 mt-12">
    <div class="container mx-auto px-4 sm:px-6 py-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- Company Info -->
            <div class="space-y-4">
                <div class="flex items-center space-x-3">
                    <% if (typeof site_logo !== 'undefined' && site_logo) { %>
                        <%
                        let logoData;
                        try {
                            logoData = typeof site_logo === 'string' && site_logo.startsWith('{') ? JSON.parse(site_logo) : null;
                        } catch (e) {
                            logoData = null;
                        }
                        %>
                        <% if (logoData && logoData.webp && logoData.webp.standard) { %>
                            <picture>
                                <source srcset="/<%= logoData.webp.standard.relativePath %>" type="image/webp">
                                <% if (logoData.original) { %>
                                    <source srcset="/<%= logoData.original.standard.relativePath %>" type="image/<%= logoData.original.format %>">
                                <% } %>
                                <img src="/<%= logoData.webp.standard.relativePath %>" alt="<%= site_name || 'ARCADE' %> Logo" class="h-8 w-auto" />
                            </picture>
                        <% } else { %>
                            <img src="<%= site_logo.startsWith('/') ? site_logo : '/' + site_logo %>" alt="<%= site_name || 'ARCADE' %> Logo" class="h-8 w-auto" />
                        <% } %>
                    <% } else { %>
                        <img src="/assets/images/logo.png" alt="<%= site_name || 'ARCADE' %> Logo" class="h-8 w-auto" />
                    <% } %>
                </div>
                <p class="text-gray-600 dark:text-gray-400 text-sm"><%= __('footer.site_description', { siteName: site_name || 'ARCADE', gameCount: (totalGameCount || 0).toLocaleString() }) %></p>
                <div class="flex space-x-4">
                    <a href="#" class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"></path>
                        </svg>
                    </a>
                    <a href="#" class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"></path>
                        </svg>
                    </a>
                    <a href="#" class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24.009 12.017 24c6.624 0 11.99-5.367 11.99-12.013C24.007 5.367 18.641.001 12.017.001z"></path>
                        </svg>
                    </a>
                </div>
            </div>

            <!-- Quick Links -->
            <div>
                <h4 class="font-semibold text-gray-900 dark:text-gray-100 mb-4"><%= __('nav.quick_links') %></h4>
                <ul class="space-y-2 text-sm">
                    <li><a href="/games" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 transition-colors duration-200" system-nav><%= __('nav.new_games') %></a></li>
                    <li><a href="/games/popular" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 transition-colors duration-200" system-nav><%= __('nav.popular_games') %></a></li>
                    <li><a href="/games/trending" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 transition-colors duration-200" system-nav><%= __('nav.trending_now') %></a></li>
                    <li><a href="/games" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 transition-colors duration-200" system-nav><%= __('nav.categories') %></a></li>
                </ul>
            </div>

            <!-- Categories -->
            <div>
                <h4 class="font-semibold text-gray-900 dark:text-gray-100 mb-4"><%= __('nav.categories') %></h4>
                <ul class="space-y-2 text-sm">
                    <li><a href="/games/tag/action" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 transition-colors duration-200" system-nav><%= __('categories.action') %></a></li>
                    <li><a href="/games/tag/adventure" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 transition-colors duration-200" system-nav><%= __('categories.adventure') %></a></li>
                    <li><a href="/games/tag/racing" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 transition-colors duration-200" system-nav><%= __('categories.racing') %></a></li>
                    <li><a href="/games/tag/puzzle" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 transition-colors duration-200" system-nav><%= __('categories.puzzle') %></a></li>
                </ul>
            </div>

            <!-- Legal -->
            <div>
                <h4 class="font-semibold text-gray-900 dark:text-gray-100 mb-4"><%= __('nav.legal') %></h4>
                <ul class="space-y-2 text-sm">
                    <li><a href="/page/privacy-policy" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 transition-colors duration-200" system-nav><%= __('nav.privacy_policy_link') %></a></li>
                    <li><a href="/page/terms-of-service" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 transition-colors duration-200" system-nav><%= __('nav.terms_of_service_link') %></a></li>
                </ul>
            </div>
        </div>

        <div class="border-t border-gray-100 dark:border-gray-800 mt-8 pt-8 text-center">
            <p class="text-gray-500 dark:text-gray-400 text-sm"><%= __('footer.copyright', { year: new Date().getFullYear() }) %></p>
        </div>
    </div>
</footer>