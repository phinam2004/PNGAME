                                <% availableLanguages.forEach(lang => { %>
                                    <button onclick="changeLanguage('<%= lang.code %>')" 
                                            class="flex items-center w-full px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200 <%= currentLanguage === lang.code ? 'bg-blue-50 dark:bg-blue-900/50 text-blue-600 dark:text-blue-400' : '' %>"
                                            role="menuitem"
                                            tabindex="-1">
