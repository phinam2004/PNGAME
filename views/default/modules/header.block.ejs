<!-- header -->
<header class="bg-white/70 dark:bg-gray-900/70 backdrop-blur-lg border-b border-gray-100 dark:border-gray-800 sticky top-0 z-30 shadow-sm dark:shadow-gray-900/10">
    <div
        class="container mx-auto flex flex-col lg:flex-row items-center justify-between px-4 sm:px-6 py-4 space-y-4 lg:space-y-0">
        <div class="flex items-center justify-between w-full lg:w-auto">
            <div class="flex items-center space-x-3">
                <button id="menuBtn"
                    class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors duration-200 touch-manipulation">
                    <svg class="w-6 h-6 text-gray-800 dark:text-gray-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
                <a href="/" system-nav>
                    <% if (typeof site_logo !== 'undefined' && site_logo) { %>
                        <% 
                            let logoImageUrl = site_logo;
                            let logoImageLargeUrl = site_logo;
                            // Check if it's the new JSON format for optimized images
                            try {
                                if (typeof site_logo === 'string' && site_logo.startsWith('{')) {
                                    let parsedData = JSON.parse(site_logo);
                                    if (parsedData.webp && parsedData.webp.standard) {
                                        logoImageUrl = `/${parsedData.webp.standard.relativePath}`;
                                        logoImageLargeUrl = parsedData.webp.large ? `/${parsedData.webp.large.relativePath}` : logoImageUrl;
                                    } else if (parsedData.original && parsedData.original.standard) {
                                        logoImageUrl = `/${parsedData.original.standard.relativePath}`;
                                        logoImageLargeUrl = parsedData.original.large ? `/${parsedData.original.large.relativePath}` : logoImageUrl;
                                    }
                                } else {
                                    logoImageUrl = site_logo.startsWith('/') ? site_logo : '/' + site_logo;
                                    logoImageLargeUrl = logoImageUrl;
                                }
                            } catch(e) {
                                logoImageUrl = site_logo.startsWith('/') ? site_logo : '/' + site_logo;
                                logoImageLargeUrl = logoImageUrl;
                            }
                        %>
                        <picture>
                            <source srcset="<%= logoImageLargeUrl %>" media="(min-width: 1024px)">
                            <img src="<%= logoImageUrl %>" alt="<%= site_name || 'ARCADE' %> Logo" class="h-12 w-auto" />
                        </picture>
                    <% } else { %>
                        <img src="/assets/images/logo.png" alt="<%= site_name || 'ARCADE' %> Logo" class="h-12 w-auto" />
                    <% } %>
                </a>
            </div>

            <div class="flex items-center space-x-3 lg:hidden">
                <!-- Mobile Dark Mode Toggle -->
                <button id="mobileDarkModeToggle" class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors duration-200" title="<%= __('common.toggle_dark_mode') %>">
                    <!-- Sun Icon (visible in dark mode) -->
                    <svg class="w-5 h-5 text-gray-600 dark:text-gray-400 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
