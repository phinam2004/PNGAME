<%- include('../header.ejs', { page }) %>

    <%- include('../modules/sidebar.block.ejs', { page }) %>

    <%- include('../modules/header.block.ejs', { page }) %>

    <div system-wrapper>
        <!-- main content -->
        <main class="min-h-screen flex items-center justify-center px-4 sm:px-6 py-12">
            <div class="w-full max-w-4xl">

                <!-- Settings Header -->
                <div class="text-center mb-8">
                    <h1 class="text-gray-800 dark:text-gray-100 text-3xl font-bold mb-2"><%= __('settings.page_title') %></h1>
                    <p class="text-gray-600 dark:text-gray-400"><%= __('settings.page_subtitle') %></p>
                </div>

                <!-- Settings Cards Container -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    
                    <!-- Profile Information Card -->
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border border-gray-100 dark:border-gray-700 p-8">
                        <div class="flex items-center mb-6">
                            <svg class="w-6 h-6 text-orange-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100"><%= __('settings.profile_information') %></h2>
                        </div>

                        <!-- Profile Form -->
                        <form id="profileForm" system-settings-form="profile" class="space-y-6" enctype="multipart/form-data">
                            <!-- CSRF Token -->
                            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
                            
                            <!-- Avatar Upload Section -->
                            <div class="space-y-4">
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                    <%= __('settings.avatar') %>
                                </label>
                                
                                <!-- Current Avatar Display -->
                                <div class="flex items-center space-x-6">
                                    <div class="relative">
                                        <img id="avatarPreview" src="<%= user ? user.avatarUrl : '/assets/images/default-avatar.jpg' %>" 
                                             alt="<%= __('settings.current_avatar') %>" 
                                             class="w-24 h-24 rounded-full border-4 border-gray-200 dark:border-gray-600 shadow-lg object-cover">
                                        <div id="avatarOverlay" class="absolute inset-0 bg-black bg-opacity-50 rounded-full hidden items-center justify-center">
                                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            </svg>
                                        </div>
                                    </div>
                                    
                                    <div class="flex-1">
                                        <!-- File Input -->
                                        <div class="relative">
                                            <input type="file" id="avatarUpload" name="avatar" accept="image/*" 
                                                   class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10">
                                            <div id="avatarDropZone" class="border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-xl p-6 text-center hover:border-orange-400 dark:hover:border-orange-500 transition-colors duration-200 cursor-pointer">
                                                <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                                                </svg>
                                                <div class="mt-2">
                                                    <p class="text-sm text-gray-600 dark:text-gray-300">
                                                        <%= __('settings.avatar_upload_text') %>
                                                    </p>
                                                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                                                        <%= __('settings.avatar_formats') %>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- Avatar Actions -->
                                        <div class="flex space-x-3 mt-3">
                                            <button type="button" id="removeAvatarBtn" 
                                                    class="text-sm text-red-600 hover:text-red-700 transition-colors duration-200 <%= !user || !user.avatar ? 'hidden' : '' %>">
                                                <%= __('settings.remove_avatar') %>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Upload Progress -->
                                <div id="avatarProgress" class="hidden">
                                    <div class="bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                                        <div id="avatarProgressBar" class="bg-orange-500 h-2 rounded-full transition-all duration-300" style="width: 0%"></div>
                                    </div>
                                    <p id="avatarProgressText" class="text-sm text-gray-600 dark:text-gray-300 mt-1">Uploading...</p>
                                </div>
                            </div>
                            
                            <!-- Username Field -->
                            <div class="space-y-2">
                                <label for="username" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                    <%= __('settings.username') %>
                                </label>
                                <div class="relative">
                                    <input type="text" id="username" name="username" required 
                                        value="<%= user ? user.username : '' %>"
                                        class="w-full bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent rounded-xl px-4 py-3 pl-12 text-sm transition-all duration-200 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400" />
                                    <svg class="w-5 h-5 absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                </div>
                                <div id="usernameError" class="text-red-500 text-sm hidden"></div>
                            </div>

                            <!-- Email Field -->
                            <div class="space-y-2">
                                <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                    <%= __('settings.email_address') %>
                                </label>
                                <div class="relative">
                                    <input type="email" id="email" name="email" required 
                                        value="<%= user ? user.email : '' %>"
                                        class="w-full bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent rounded-xl px-4 py-3 pl-12 text-sm transition-all duration-200 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400" />
                                    <svg class="w-5 h-5 absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                                <div id="emailError" class="text-red-500 text-sm hidden"></div>
                            </div>

                            <!-- Name Fields -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <!-- First Name -->
                                <div class="space-y-2">
                                    <label for="first_name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                        <%= __('settings.first_name') %>
                                    </label>
                                    <div class="relative">
                                        <input type="text" id="first_name" name="first_name" 
                                            value="<%= user ? user.first_name : '' %>"
                                            class="w-full bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent rounded-xl px-4 py-3 pl-12 text-sm transition-all duration-200 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400" />
                                        <svg class="w-5 h-5 absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                    </div>
                                </div>

                                <!-- Last Name -->
                                <div class="space-y-2">
                                    <label for="last_name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                        <%= __('settings.last_name') %>
                                    </label>
                                    <div class="relative">
                                        <input type="text" id="last_name" name="last_name" 
                                            value="<%= user ? user.last_name : '' %>"
                                            class="w-full bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent rounded-xl px-4 py-3 pl-12 text-sm transition-all duration-200 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400" />
                                        <svg class="w-5 h-5 absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                    </div>
                                </div>
                            </div>

                            <!-- Save Profile Button -->
                            <button type="submit" id="profileSubmitBtn"
                                class="w-full bg-black dark:bg-gray-700 text-white py-3 px-4 rounded-xl font-medium hover:bg-gray-800 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98] disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none">
                                <span class="btn-text"><%= __('settings.update_profile') %></span>
                                <span class="btn-loading hidden">
                                    <svg class="w-5 h-5 animate-spin -ml-1 mr-3 text-white inline" fill="none" viewBox="0 0 24 24">
                                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                    </svg>
                                    <%= __('settings.updating') %>
                                </span>
                            </button>

                        </form>
                    </div>

                    <!-- Security Settings Card -->
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border border-gray-100 dark:border-gray-700 p-8">
                        <div class="flex items-center mb-6">
                            <svg class="w-6 h-6 text-orange-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                            <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100"><%= __('settings.security_settings') %></h2>
                        </div>

                        <!-- Password Form -->
                        <form id="passwordForm" system-settings-form="password" class="space-y-6">
                            <!-- CSRF Token -->
                            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
                            
                            <!-- Current Password -->
                            <div class="space-y-2">
                                <label for="current_password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                    <%= __('settings.current_password') %>
                                </label>
                                <div class="relative">
                                    <input type="password" id="current_password" name="current_password" required 
                                        placeholder="<%= __('settings.current_password_placeholder') %>"
                                        class="w-full bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent rounded-xl px-4 py-3 pl-12 pr-12 text-sm transition-all duration-200 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400" />
                                    <svg class="w-5 h-5 absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                    </svg>
                                    <button type="button" id="toggleCurrentPassword"
                                        class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-200">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                    </button>
                                </div>
                                <div id="currentPasswordError" class="text-red-500 text-sm hidden"></div>
                            </div>

                            <!-- New Password -->
                            <div class="space-y-2">
                                <label for="new_password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                    <%= __('settings.new_password') %>
                                </label>
                                <div class="relative">
                                    <input type="password" id="new_password" name="new_password" required 
                                        placeholder="<%= __('settings.new_password_placeholder') %>"
                                        class="w-full bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent rounded-xl px-4 py-3 pl-12 pr-12 text-sm transition-all duration-200 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400" />
                                    <svg class="w-5 h-5 absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                    </svg>
                                    <button type="button" id="toggleNewPassword"
                                        class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-200">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                    </button>
                                </div>
                                <div id="newPasswordError" class="text-red-500 text-sm hidden"></div>
                                <!-- Password strength indicator -->
                                <div id="passwordStrength" class="hidden">
                                    <div class="flex space-x-1 mt-2">
                                        <div class="flex-1 h-1 bg-gray-200 dark:bg-gray-600 rounded-full"></div>
                                        <div class="flex-1 h-1 bg-gray-200 dark:bg-gray-600 rounded-full"></div>
                                        <div class="flex-1 h-1 bg-gray-200 dark:bg-gray-600 rounded-full"></div>
                                        <div class="flex-1 h-1 bg-gray-200 dark:bg-gray-600 rounded-full"></div>
                                    </div>
                                    <p id="strengthText" class="text-xs mt-1 text-gray-500 dark:text-gray-400"></p>
                                </div>
                            </div>

                            <!-- Confirm New Password -->
                            <div class="space-y-2">
                                <label for="confirm_password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                    <%= __('settings.confirm_new_password') %>
                                </label>
                                <div class="relative">
                                    <input type="password" id="confirm_password" name="confirm_password" required 
                                        placeholder="<%= __('settings.confirm_new_password_placeholder') %>"
                                        class="w-full bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent rounded-xl px-4 py-3 pl-12 pr-12 text-sm transition-all duration-200 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400" />
                                    <svg class="w-5 h-5 absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                    </svg>
                                    <button type="button" id="toggleConfirmPassword"
                                        class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-200">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                    </button>
                                </div>
                                <div id="confirmPasswordError" class="text-red-500 text-sm hidden"></div>
                            </div>

                            <!-- Change Password Button -->
                            <button type="submit" id="passwordSubmitBtn"
                                class="w-full bg-red-600 text-white py-3 px-4 rounded-xl font-medium hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-400 focus:ring-offset-2 transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98] disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none">
                                <span class="btn-text"><%= __('settings.change_password') %></span>
                                <span class="btn-loading hidden">
                                    <svg class="w-5 h-5 animate-spin -ml-1 mr-3 text-white inline" fill="none" viewBox="0 0 24 24">
                                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                    </svg>
                                    <%= __('settings.updating') %>
                                </span>
                            </button>

                        </form>
                    </div>

                    <!-- Additional Profile Information Card -->
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border border-gray-100 dark:border-gray-700 p-8">
                        <div class="flex items-center mb-6">
                            <svg class="w-6 h-6 text-orange-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100"><%= __('settings.additional_information') %></h2>
                        </div>

                        <!-- Additional Profile Form -->
                        <form id="additionalForm" system-settings-form="additional" class="space-y-6">
                            <!-- CSRF Token -->
                            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
                            
                            <!-- Bio Field -->
                            <div class="space-y-2">
                                <label for="bio" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                    <%= __('settings.bio') %>
                                </label>
                                <div class="relative">
                                    <textarea id="bio" name="bio" rows="4"
                                        placeholder="<%= __('settings.bio_placeholder') %>"
                                        class="w-full bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent rounded-xl px-4 py-3 text-sm transition-all duration-200 resize-none text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400"><%= user ? user.bio || '' : '' %></textarea>
                                </div>
                            </div>

                            <!-- Country Field -->
                            <div class="space-y-2">
                                <label for="country" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                    <%= __('settings.country') %>
                                </label>
                                <div class="relative">
                                    <select id="country" name="country" class="block w-full rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-4 py-2 text-sm text-gray-700 dark:text-gray-300 shadow-md transition-all duration-200 focus:border-blue-500 dark:focus:border-blue-400 focus:outline-none focus:ring-2 focus:ring-blue-500/20 dark:focus:ring-blue-400/20 focus:shadow-lg system-country-select">
                                        <option value=""><%= __('settings.country_placeholder') %></option>
                                        <% if (countries) { %>
                                            <% countries.forEach(function(country) { %>
                                                <option value="<%= country.code %>" <%= user && user.country === country.code ? 'selected' : '' %>><%= country.name %></option>
                                            <% }); %>
                                        <% } %>
                                    </select>
                                </div>
                            </div>

                            <!-- Date of Birth Field -->
                            <div class="space-y-2">
                                <label for="date_of_birth" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                    <%= __('settings.date_of_birth') %>
                                </label>
                                <div class="relative">
                                    <input type="date" id="date_of_birth" name="date_of_birth"
                                        value="<%= user ? user.date_of_birth || '' : '' %>"
                                        class="w-full bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent rounded-xl px-4 py-3 pl-12 text-sm transition-all duration-200 text-gray-900 dark:text-gray-100" />
