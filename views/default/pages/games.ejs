<%- include('../header.ejs', { page }) %>

    <%- include('../modules/sidebar.block.ejs', { page }) %>

    <%- include('../modules/header.block.ejs', { page }) %>

    <div system-wrapper>
        <% if (listType === 'category' && bannerImage) { %>
        <!-- Category Banner with Image -->
        <div class="relative bg-gradient-to-r from-gray-900 to-gray-800 text-white overflow-hidden">
            <!-- Category Image Background -->
            <% 
                let bannerImageUrl = bannerImage;
                // Check if it's the new JSON format
                try {
                    if (typeof bannerImage === 'string' && bannerImage.startsWith('{')) {
                        let parsedData = JSON.parse(bannerImage);
                        if (parsedData.webp && parsedData.webp.large) {
                            bannerImageUrl = `/${parsedData.webp.large.relativePath}`;
                        } else if (parsedData.original && parsedData.original.large) {
                            bannerImageUrl = `/${parsedData.original.large.relativePath}`;
                        }
                    } else {
                        bannerImageUrl = bannerImage.startsWith('/') ? bannerImage : '/' + bannerImage;
                    }
                } catch(e) {
                    bannerImageUrl = bannerImage.startsWith('/') ? bannerImage : '/' + bannerImage;
                }
            %>
            <div class="absolute inset-0 bg-center bg-cover" style="background-image: url('<%= bannerImageUrl %>')"></div>
            <!-- Gradient overlay that blends with the image -->
            <div class="absolute inset-0" style="background: linear-gradient(135deg, <%= bannerColor %>CC 0%, rgba(0,0,0,0.7) 50%, <%= bannerColor %>99 100%)"></div>
            
            <!-- Content layer -->
            <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-8 py-12">
                <div class="text-center">
                    <h1 class="text-4xl lg:text-6xl font-bold text-white drop-shadow-lg mb-4">
                        <%= listTitle %>
                    </h1>
                    <p class="text-xl lg:text-2xl text-white/90 drop-shadow mb-6">
                        <%= listDescription %>
                    </p>
                    <% if (games && games.length > 0) { %>
                    <p class="text-lg text-white/80 drop-shadow">
                        <%= games.length %> <%= games.length === 1 ? __('common.game') : __('common.games') %> <%= __('common.available_to_play') %>
                    </p>
                    <% } %>
                </div>
            </div>
        </div>
        <% } else if (listType === 'search') { %>
        <!-- Search Header with Background -->
        <div class="relative bg-gradient-to-r from-gray-900 to-gray-800 text-white overflow-hidden">
            <% if (games && games.length > 0 && games[0] && games[0].thumbnail) { %>
            <!-- First Game's Thumbnail as Background -->
            <% 
                let searchBannerUrl = games[0].thumbnail;
                // Check if it's the new JSON format
                try {
                    if (typeof games[0].thumbnail === 'string' && games[0].thumbnail.startsWith('{')) {
                        let parsedData = JSON.parse(games[0].thumbnail);
                        if (parsedData.webp && parsedData.webp.large) {
                            searchBannerUrl = `/${parsedData.webp.large.relativePath}`;
                        } else if (parsedData.original && parsedData.original.large) {
                            searchBannerUrl = `/${parsedData.original.large.relativePath}`;
                        }
                    } else {
                        searchBannerUrl = games[0].thumbnail.startsWith('/') ? games[0].thumbnail : '/' + games[0].thumbnail;
                    }
                } catch(e) {
                    searchBannerUrl = games[0].thumbnail.startsWith('/') ? games[0].thumbnail : '/' + games[0].thumbnail;
                }
            %>
            <div class="absolute inset-0 bg-center bg-cover" style="background-image: url('<%= searchBannerUrl %>')"></div>
            <!-- Gradient overlay that blends with the image -->
            <div class="absolute inset-0" style="background: linear-gradient(135deg, #6366F1CC 0%, rgba(0,0,0,0.8) 50%, #6366F199 100%)"></div>
            <% } else { %>
            <!-- Fallback gradient background -->
            <div class="absolute inset-0" style="background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 50%, #EC4899 100%)"></div>
            <% } %>
            
            <!-- Content layer -->
            <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-8 py-12">
                <div class="text-center">
                    <h1 class="text-4xl lg:text-6xl font-bold text-white drop-shadow-lg mb-4">
                        <%= __('search.results') %>
                    </h1>
                    <p class="text-xl lg:text-2xl text-white/90 drop-shadow mb-6">
                        <%= __('games.results_found', { count: totalCount || 0 }) %> "<span class="font-semibold text-white"><%= searchQuery %></span>"
                    </p>
                    <% if (games && games.length > 0) { %>
                    <p class="text-lg text-white/80 drop-shadow">
                        <%= __('games.showing_results', { start: ((currentPage - 1) * gamesPerPage) + 1, end: ((currentPage - 1) * gamesPerPage) + games.length, total: totalCount }) %>
                    </p>
                    <% } else { %>
                    <p class="text-lg text-white/80 drop-shadow">
                        <%= __('games.try_different_search') %>
                    </p>
                    <% } %>
                </div>
            </div>
        </div>
        <% } else { %>
        <%- include('../modules/banner.block.ejs', { page }) %>
        <% } %>
        
