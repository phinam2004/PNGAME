<%- include('../header.ejs', { page }) %>

    <%- include('../modules/sidebar.block.ejs', { page }) %>

    <%- include('../modules/header.block.ejs', { page }) %>
    
    <div system-wrapper class="min-h-screen flex flex-col">
        <!-- Banner -->
        <div class="relative w-full h-64 sm:h-72 md:h-80 lg:h-96 flex items-end">
            <img src="/assets/images/hero.webp"
                alt="<%= customPage.title %>" class="absolute inset-0 w-full h-full object-cover object-top" />
            <div class="absolute inset-0 bg-gradient-to-b from-gray-50/0 via-gray-50/20 to-gray-50 dark:from-gray-900/0 dark:via-gray-900/20 dark:to-gray-900"></div>
            <div class="relative z-10 flex flex-col sm:flex-row items-start sm:items-end px-6 sm:px-12 pb-8 w-full max-w-6xl mx-auto">
                <div class="flex items-center bg-blue-100 dark:bg-blue-900/30 rounded-2xl p-4 mr-6 mb-4 sm:mb-0">
                    <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
                <div>
                    <h1 class="text-3xl sm:text-4xl font-extrabold text-gray-900 dark:text-gray-100 mb-2 flex items-center">
                        <%= customPage.title %>
                    </h1>
                    <div class="flex flex-wrap gap-4 text-sm text-gray-500 dark:text-gray-400">
                        <span><%= __('common.created') %> <%= new Date(customPage.created_at).toLocaleDateString('en-US', { 
                            year: 'numeric', 
                            month: 'short', 
                            day: 'numeric' 
                        }) %></span>
                        <% if (customPage.updated_at && customPage.updated_at !== customPage.created_at) { %>
                        <span><%= __('common.updated') %> <%= new Date(customPage.updated_at).toLocaleDateString('en-US', { 
                            year: 'numeric', 
                            month: 'short', 
                            day: 'numeric' 
                        }) %></span>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Main Content -->
        <main class="max-w-7xl mx-auto px-4 sm:px-8 mt-6 space-y-8 flex-grow">
            <!-- Page Content -->
            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-md border border-gray-100 dark:border-gray-700 overflow-hidden">
                <!-- Content Body -->
                <div class="p-6 lg:p-8">
                    <div class="w-full prose prose-lg max-w-none prose-headings:text-gray-900 dark:prose-headings:text-gray-100 prose-headings:font-bold prose-p:text-gray-700 dark:prose-p:text-gray-300 prose-p:leading-relaxed prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-a:no-underline hover:prose-a:underline prose-strong:text-gray-900 dark:prose-strong:text-gray-100 prose-blockquote:border-blue-200 dark:prose-blockquote:border-blue-700 prose-blockquote:bg-blue-50/50 dark:prose-blockquote:bg-blue-900/20 prose-blockquote:rounded-r-lg prose-code:bg-gray-100 dark:prose-code:bg-gray-700 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-gray-800 dark:prose-code:text-gray-200 [&_.ql-align-center]:text-center [&_.ql-align-right]:text-right [&_.ql-align-justify]:text-justify">
                        <%- customPage.content %>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <%- include('../modules/footer.block.ejs', { page }) %>

<%- include('../footer.ejs') %>