<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Default CSS (includes Tailwind) -->
    <link rel="stylesheet" href="/assets/css/default.min.css">
</head>
<body class="m-0 p-0 bg-black dark:bg-black overflow-hidden h-screen w-screen font-sans">
    <!-- EmulatorJS Container -->
    <div id="emulatorjs-container" class="w-full h-full flex items-center justify-center" data-rom-system="<%= game.rom_system %>" data-rom-file="/<%= game.game_file %>">
        <div id="emulatorjs-game" class="w-full h-full max-w-full max-h-full"></div>
    </div>
    
    <!-- Game data for EmulatorJS -->
    <script>
        // Set game data globally for ROM ad system
        window.gameData = {
            id: <%= game.id %>,
            title: '<%= game.title.replace(/'/g, "\\'") %>',
            type: 'rom',
            romSystem: '<%= game.rom_system %>',
            romFile: '/<%= game.game_file %>',
            thumbnailUrl: '<%= game.thumbnailUrl %>'
        };
    </script>

    <!-- jQuery -->
    <script src="/assets/js/libs/jquery.min.js"></script>
    
    <!-- ROM Ad System -->
    <script src="/assets/js/ads.rom.min.js"></script>
</body>
</html>