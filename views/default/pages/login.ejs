<%- include('../header.ejs', { page }) %>

    <%- include('../modules/sidebar.block.ejs', { page }) %>

    <%- include('../modules/header.block.ejs', { page }) %>

    <div system-wrapper>
        <!-- main content -->
        <main class="min-h-screen flex items-center justify-center px-4 sm:px-6 py-12">
            <div class="w-full max-w-4xl">

                <!-- Login Card -->
                <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg dark:shadow-2xl border border-gray-100 dark:border-gray-700 overflow-hidden">
                    <div class="grid grid-cols-1 lg:grid-cols-2 min-h-[600px]">
                        
                        <!-- Left Column - Login Form -->
                        <div class="p-8 flex flex-col justify-center">

                    <!-- Header -->
                    <div class="text-center mb-8">
                        <h1 class="text-gray-600 dark:text-gray-200 text-2xl font-bold"><%= __('auth.signin_title') %></h1>
                    </div>

                    <!-- Login Form -->
                    <form id="loginForm" system-auth-form="login" class="space-y-6">
                        <!-- CSRF Token -->
                        <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />

                        <!-- Username Field -->
                        <div class="space-y-2">
                            <label for="username" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                <%= __('auth.username_email') %>
                            </label>
                            <div class="relative">
                                <input type="text" id="username" name="username" required placeholder="<%= __('auth.username_email_placeholder') %>"
                                    class="w-full bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent rounded-xl px-4 py-3 pl-12 text-sm text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 transition-all duration-200" />
                                <svg class="w-5 h-5 absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            <div id="usernameError" class="text-red-500 text-sm hidden"></div>
                        </div>

                        <!-- Password Field -->
                        <div class="space-y-2">
                            <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                <%= __('auth.password') %>
                            </label>
                            <div class="relative">
                                <input type="password" id="password" name="password" required
                                    placeholder="<%= __('auth.password_placeholder') %>"
                                    class="w-full bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent rounded-xl px-4 py-3 pl-12 pr-12 text-sm text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 transition-all duration-200" />
                                <svg class="w-5 h-5 absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                </svg>
                                <button type="button" id="togglePassword"
                                    class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-400 transition-colors duration-200">
                                    <svg id="eyeIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                </button>
                            </div>
                            <div id="passwordError" class="text-red-500 text-sm hidden"></div>
                        </div>

                        <!-- Remember Me & Forgot Password -->
                        <div class="flex items-center justify-between">
                            <label class="flex items-center">
                                <input type="checkbox" id="remember" name="remember"
                                    class="w-4 h-4 text-orange-500 bg-gray-100 dark:bg-gray-700 border-gray-300 dark:border-gray-600 rounded focus:ring-orange-400 focus:ring-2">
                                <span class="ml-2 text-sm text-gray-700 dark:text-gray-300"><%= __('auth.remember_me') %></span>
                            </label>
                            <a href="/forgot-password"
                                class="text-sm text-orange-500 hover:text-orange-600 font-medium transition-colors duration-200" system-nav>
                                <%= __('auth.forgot_password') %>
                            </a>
                        </div>

                        <!-- reCAPTCHA -->
                        <% if (locals.recaptcha_site_key && locals.recaptcha_site_key.trim() !== '') { %>
                        <div class="flex justify-center">
                            <div class="g-recaptcha" data-sitekey="<%= locals.recaptcha_site_key %>"></div>
                        </div>
                        <% } %>

                        <!-- Submit Button -->
                        <button type="submit" id="loginSubmitBtn"
                            class="w-full bg-black dark:bg-gray-700 text-white py-3 px-4 rounded-xl font-medium hover:bg-gray-800 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98] disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none">
                            <span class="btn-text"><%= __('auth.signin') %></span>
                            <span class="btn-loading hidden">
                                <svg class="w-5 h-5 animate-spin -ml-1 mr-3 text-white inline" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                <%= __('auth.processing') %>
                            </span>
                        </button>

                        <!-- Email Verification Section -->
                        <div id="emailVerificationSection" class="mt-6 p-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-700/50 rounded-xl hidden">
                            <div class="text-center">
                                <div class="flex justify-center mb-2">
                                    <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                                <h3 class="text-sm font-semibold text-blue-700 dark:text-blue-400 mb-1"><%= __('auth.email_verification_required') %></h3>
                                <p class="text-xs text-blue-600 dark:text-blue-300 mb-3"><%= __('auth.email_verification_desc') %></p>
                                <button type="button" id="resendVerificationBtn"
                                    class="w-full bg-blue-500 text-white py-2 px-4 rounded-lg text-sm font-medium hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed">
                                    <span class="btn-text"><%= __('auth.resend_verification') %></span>
                                    <span class="btn-loading hidden">
                                        <svg class="w-4 h-4 animate-spin -ml-1 mr-2 text-white inline" fill="none" viewBox="0 0 24 24">
                                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                        </svg>
                                        <%= __('auth.sending') %>
                                    </span>
                                </button>
                            </div>
                        </div>

                        <!-- Sign Up Link -->
                        <% if (user_registration_enabled === '1') { %>
                            <div class="text-center mt-6">
                                <p class="text-gray-600 dark:text-gray-400">
                                    <%= __('auth.no_account') %>
                                    <a href="/register"
                                        class="text-orange-500 hover:text-orange-600 font-medium transition-colors duration-200" system-nav>
                                        <%= __('auth.signup') %>
                                    </a>
                                </p>
                            </div>
                        <% } %>

                    </form>

                        </div>
                        
                        <!-- Right Column - Social Login -->
                        <div class="bg-gray-50 dark:bg-gray-700 p-8 flex flex-col justify-center">
                            
                            <!-- Header -->
                            <div class="text-center mb-8">
                                <h2 class="text-xl font-semibold text-gray-700 dark:text-gray-200 mb-2"><%= __('auth.quick_signin') %></h2>
                                <p class="text-gray-500 dark:text-gray-400 text-sm"><%= __('auth.social_signin_desc') %></p>
                            </div>

                            <!-- Social Login Buttons -->
                            <div class="space-y-4" id="social-login-buttons">
                                <!-- Google Login -->
                                <% if (typeof enable_google_login !== 'undefined' && enable_google_login === '1') { %>
                                <a href="/auth/google"
                                    class="w-full flex items-center justify-center space-x-3 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 text-gray-700 dark:text-gray-200 py-3 px-4 rounded-xl font-medium hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed">
                                    <svg class="w-5 h-5 text-red-500" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                        <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                        <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                                    </svg>
                                    <span><%= __('auth.continue_google') %></span>
                                </a>
                                <% } %>

                                <!-- Facebook Login -->
                                <% if (typeof enable_facebook_login !== 'undefined' && enable_facebook_login === '1') { %>
                                <a href="/auth/facebook"
                                    class="w-full flex items-center justify-center space-x-3 bg-[#1877F2] text-white py-3 px-4 rounded-xl font-medium hover:bg-[#166FE5] focus:outline-none focus:ring-2 focus:ring-orange-400 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed">
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                                    </svg>
                                    <span><%= __('auth.continue_facebook') %></span>
                                </a>
                                <% } %>

                                <!-- Show message if no social login is enabled -->
                                <% if ((typeof enable_google_login === 'undefined' || enable_google_login !== '1') && (typeof enable_facebook_login === 'undefined' || enable_facebook_login !== '1')) { %>
                                <div class="text-center py-8">
                                    <div class="flex justify-center mb-3">
                                        <div class="w-12 h-12 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center">
                                            <svg class="w-6 h-6 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                            </svg>
                                        </div>
                                    </div>
                                    <p class="text-sm font-medium text-gray-600 dark:text-gray-300 mb-1"><%= __('auth.social_login_disabled') %></p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400"><%= __('auth.social_login_disabled_desc') %></p>
                                </div>
                                <% } %>
                            </div>

                            <!-- Additional Info -->
                            <div class="text-center text-sm text-gray-500 dark:text-gray-400 my-8">
                                <p class="mb-2 text-gray-500 dark:text-gray-400"><%= __('auth.secure_auth') %></p>
                                <div class="flex justify-center space-x-4">
                                    <span class="flex items-center">
                                        <svg class="w-4 h-4 mr-1 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <%= __('auth.secure') %>
                                    </span>
                                    <span class="flex items-center">
                                        <svg class="w-4 h-4 mr-1 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <%= __('auth.fast') %>
                                    </span>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>

                <!-- Ad Banner -->
                <div class="flex justify-center mt-6">
                    <% if (enable_frontend_pjax === '0') { %>
                        <!-- Direct ads for AdSense compatibility when PJAX is disabled -->
                        <%- include('../modules/ad_direct.block.ejs', { placement: 'header-banner', width: 728, height: 90, classes: '!hidden lg:!block mx-auto' }) %>
                        <!-- Mobile ad (sidebar rectangle) -->
                        <%- include('../modules/ad_direct.block.ejs', { placement: 'sidebar-rectangle', width: 300, height: 250, classes: '!block lg:!hidden mx-auto' }) %>
                    <% } else { %>
                        <!-- AJAX ads for smooth navigation when PJAX is enabled -->
                        <%- include('../modules/ad_container.block.ejs', { placement: 'header-banner', width: 728, height: 90, classes: '!hidden lg:!block mx-auto' }) %>
                        <!-- Mobile ad (sidebar rectangle) -->
                        <%- include('../modules/ad_container.block.ejs', { placement: 'sidebar-rectangle', width: 300, height: 250, classes: '!block lg:!hidden mx-auto' }) %>
                    <% } %>
                </div>

                <!-- Footer Info -->
                <div class="text-center mt-8 space-y-4">
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        <%= __('auth.terms_agreement') %>
                        <a href="/page/terms-of-service"
                            class="text-orange-500 hover:text-orange-600 transition-colors duration-200" system-nav><%= __('auth.terms_of') %>
                            <%= __('auth.terms_service') %></a>
                        <%= __('common.and') %>
                        <a href="/page/privacy-policy"
                            class="text-orange-500 hover:text-orange-600 transition-colors duration-200" system-nav><%= __('auth.privacy') %>
                            <%= __('auth.privacy_policy') %></a>
                    </p>
                </div>

            </div>
        </main>
    </div>

    <%- include('../modules/footer.block.ejs', { page }) %>

<%- include('../footer.ejs', { page }) %>