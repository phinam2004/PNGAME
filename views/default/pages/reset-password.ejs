<%- include('../header.ejs', { page }) %>

    <%- include('../modules/sidebar.block.ejs', { page }) %>

    <%- include('../modules/header.block.ejs', { page }) %>

    <div system-wrapper>
        <!-- main content -->
        <main class="min-h-screen flex items-center justify-center px-4 sm:px-6 py-12">
            <div class="w-full max-w-4xl">

                <!-- Reset Password Card -->
                <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg dark:shadow-2xl border border-gray-100 dark:border-gray-700 overflow-hidden">
                    <div class="grid grid-cols-1 lg:grid-cols-2 min-h-[600px]">
                        
                        <!-- Left Column - Reset Password Form -->
                        <div class="p-8 flex flex-col justify-center">

                            <!-- Header -->
                            <div class="text-center mb-8">
                                <div class="mx-auto h-16 w-16 flex items-center justify-center rounded-full bg-orange-100 dark:bg-orange-900/30 mb-4">
                                    <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                    </svg>
                                </div>
                                <h1 class="text-gray-600 dark:text-gray-200 text-2xl font-bold"><%= __('auth.reset_password_title') %></h1>
                                <% if (typeof email !== 'undefined' && email) { %>
                                <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">
                                    <%= __('auth.new_password') %> <span class="font-medium text-gray-900 dark:text-gray-100"><%= email %></span>
                                </p>
                                <% } else { %>
                                <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">
                                    <%= __('auth.new_password_placeholder') %>
                                </p>
                                <% } %>
                            </div>

                            <!-- Error Display -->
                            <% if (typeof error !== 'undefined' && error) { %>
                            <div class="bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-700 rounded-lg p-4 mb-6">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.268 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                                        </svg>
                                    </div>
                                    <div class="ml-3">
                                        <p class="text-sm font-medium text-red-800 dark:text-red-200"><%= error %></p>
                                    </div>
                                </div>
                                <div class="mt-4">
                                    <a href="/forgot-password" 
                                       class="text-sm font-medium text-red-600 dark:text-red-400 hover:text-red-500 dark:hover:text-red-300 transition-colors duration-200"
                                       system-nav>
                                        <%= __('auth.send_reset_link') %>
                                    </a>
                                </div>
                            </div>
                            <% } else { %>

                            <!-- Reset Password Form -->
                            <form id="resetPasswordForm" class="space-y-6">
                                <!-- CSRF Token -->
                                <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
                                <input type="hidden" name="token" value="<%= token %>">

                                <!-- New Password Field -->
                                <div class="space-y-2">
                                    <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                        <%= __('auth.new_password') %>
                                    </label>
                                    <div class="relative">
                                        <input type="password" id="password" name="password" required placeholder="<%= __('auth.new_password_placeholder') %>"
                                            class="w-full bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent rounded-xl px-4 py-3 pl-12 pr-12 text-sm transition-all duration-200 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400"
                                            minlength="6" />
                                        <svg class="w-5 h-5 absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                        </svg>
                                        <button type="button" id="togglePassword"
                                            class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-200">
                                            <svg id="eyeIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                            </svg>
                                        </button>
                                    </div>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">
                                        <%= __('auth.security_req_1') %>
                                    </p>
                                </div>

                                <!-- Confirm Password Field -->
                                <div class="space-y-2">
                                    <label for="confirm_password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                        <%= __('auth.confirm_new_password') %>
                                    </label>
                                    <div class="relative">
                                        <input type="password" id="confirm_password" name="confirm_password" required placeholder="<%= __('auth.confirm_new_password_placeholder') %>"
                                            class="w-full bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent rounded-xl px-4 py-3 pl-12 pr-12 text-sm transition-all duration-200 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400"
                                            minlength="6" />
                                        <svg class="w-5 h-5 absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                        </svg>
                                        <button type="button" id="toggleConfirmPassword"
                                            class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-200">
                                            <svg id="eyeIconConfirm" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                            </svg>
                                        </button>
                                    </div>
                                </div>

                                <!-- Password Strength Indicator -->
                                <div class="hidden" id="password-strength">
                                    <div class="flex items-center space-x-2">
                                        <div class="flex-1">
                                            <div class="w-full bg-gray-200 dark:bg-gray-600 rounded-full h-2">
                                                <div id="strength-bar" class="h-2 rounded-full transition-all duration-300"></div>
                                            </div>
                                        </div>
                                        <span id="strength-text" class="text-xs font-medium text-gray-600 dark:text-gray-300"></span>
                                    </div>
                                </div>

                                <!-- reCAPTCHA -->
                                <% if (locals.recaptcha_site_key && locals.recaptcha_site_key.trim() !== '') { %>
                                <div class="flex justify-center">
                                    <div class="g-recaptcha" data-sitekey="<%= locals.recaptcha_site_key %>"></div>
                                </div>
                                <% } %>

                                <!-- Submit Button -->
                                <button type="submit" id="resetSubmitBtn"
                                    class="w-full bg-black dark:bg-gray-700 text-white py-3 px-4 rounded-xl font-medium hover:bg-gray-800 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98] disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none">
                                    <span class="btn-text">
                                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                        </svg>
                                        <%= __('auth.reset_password_button') %>
                                    </span>
                                    <span class="btn-loading hidden">
                                        <svg class="w-5 h-5 animate-spin -ml-1 mr-3 text-white inline" fill="none" viewBox="0 0 24 24">
                                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                        </svg>
                                        <%= __('auth.resetting') %>
                                    </span>
                                </button>

                                <!-- Back to Login Link -->
                                <div class="text-center">
                                    <p class="text-gray-600 dark:text-gray-300">
                                        <%= __('auth.remember_password') %>
                                        <a href="/login"
                                            class="text-orange-500 hover:text-orange-600 font-medium transition-colors duration-200" system-nav>
                                            <%= __('auth.back_to_login') %>
                                        </a>
                                    </p>
                                </div>

                            </form>
                            <% } %>

                        </div>
                        
                        <!-- Right Column - Security Information -->
                        <div class="bg-gray-50 dark:bg-gray-700 p-8 flex flex-col justify-center">
                            
                            <!-- Header -->
                            <div class="text-center mb-8">
                                <h2 class="text-xl font-semibold text-gray-700 dark:text-gray-200 mb-2"><%= __('auth.security_requirements') %></h2>
                                <p class="text-gray-500 dark:text-gray-400 text-sm"><%= __('auth.new_password') %></p>
                            </div>

                            <!-- Password Requirements -->
                            <div class="space-y-4">
                                <h3 class="font-medium text-gray-700 dark:text-gray-200 mb-3"><%= __('auth.security_requirements') %>:</h3>
                                
                                <div class="flex items-start space-x-3">
                                    <div class="flex-shrink-0 w-5 h-5 bg-orange-100 dark:bg-orange-900/30 rounded-full flex items-center justify-center mt-0.5">
                                        <svg class="w-3 h-3 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-600 dark:text-gray-300"><%= __('auth.security_req_1') %></p>
                                    </div>
                                </div>

                                <div class="flex items-start space-x-3">
                                    <div class="flex-shrink-0 w-5 h-5 bg-orange-100 dark:bg-orange-900/30 rounded-full flex items-center justify-center mt-0.5">
                                        <svg class="w-3 h-3 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-600 dark:text-gray-300"><%= __('auth.password_min_length') %></p>
                                    </div>
                                </div>

                                <div class="flex items-start space-x-3">
                                    <div class="flex-shrink-0 w-5 h-5 bg-orange-100 dark:bg-orange-900/30 rounded-full flex items-center justify-center mt-0.5">
                                        <svg class="w-3 h-3 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-600 dark:text-gray-300"><%= __('auth.security_req_2') %></p>
                                    </div>
                                </div>

                                <div class="flex items-start space-x-3">
                                    <div class="flex-shrink-0 w-5 h-5 bg-orange-100 dark:bg-orange-900/30 rounded-full flex items-center justify-center mt-0.5">
                                        <svg class="w-3 h-3 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-600 dark:text-gray-300"><%= __('auth.security_req_3') %></p>
                                    </div>
                                </div>
                            </div>

                            <!-- Security Features -->
                            <div class="text-center text-sm text-gray-500 dark:text-gray-400 mt-8">
                                <p class="mb-2"><%= __('auth.secure_auth') %></p>
                                <div class="flex justify-center space-x-4">
                                    <span class="flex items-center">
                                        <svg class="w-4 h-4 mr-1 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                                        </svg>
                                        <%= __('auth.secure') %>
                                    </span>
                                    <span class="flex items-center">
                                        <svg class="w-4 h-4 mr-1 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                        </svg>
                                        <%= __('auth.fast') %>
                                    </span>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>

                <!-- Footer Info -->
                <div class="text-center mt-8">
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        <%= __('auth.security_req_2') %>
                    </p>
                </div>


            </div>
        </main>
    </div>


    <%- include('../modules/footer.block.ejs', { page }) %>

<%- include('../footer.ejs', { page }) %>