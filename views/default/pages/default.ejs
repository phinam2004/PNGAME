<%- include('../header.ejs', { page }) %>

    <%- include('../modules/sidebar.block.ejs', { page }) %>

    <%- include('../modules/header.block.ejs', { page }) %>

    <div system-wrapper>
        <!-- Header Banner Ad -->
        <div class="bg-gray-50/30 dark:bg-gray-800/30 border-b border-gray-200/50 dark:border-gray-700/50 py-4">
            <div class="container mx-auto px-4 sm:px-6 flex justify-center">
                <% if (enable_frontend_pjax === '0') { %>
                    <!-- Direct ads for AdSense compatibility when PJAX is disabled -->
                    <%- include('../modules/ad_direct.block.ejs', { placement: 'header-banner', width: 728, height: 90, classes: '!hidden lg:!block' }) %>
                    <!-- Mobile header ad (sidebar rectangle) -->
                    <%- include('../modules/ad_direct.block.ejs', { placement: 'sidebar-rectangle', width: 300, height: 250, classes: '!block lg:!hidden' }) %>
                <% } else { %>
                    <!-- AJAX ads for smooth navigation when PJAX is enabled -->
                    <%- include('../modules/ad_container.block.ejs', { placement: 'header-banner', width: 728, height: 90, classes: '!hidden lg:!block' }) %>
                    <!-- Mobile header ad (sidebar rectangle) -->
                    <%- include('../modules/ad_container.block.ejs', { placement: 'sidebar-rectangle', width: 300, height: 250, classes: '!block lg:!hidden' }) %>
                <% } %>
            </div>
        </div>

        <!-- main content -->
        <main class="container mx-auto px-4 sm:px-6 py-6 lg:py-8 space-y-8 lg:space-y-12">

            <!-- Featured Games Grid -->
            <% if (featuredGames && featuredGames.length > 0) { %>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
                <% featuredGames.forEach(game => { %>
                    <a href="/play/<%= game.slug %>" class="group" system-nav>
                        <div class="game-thumbnail aspect-square rounded-2xl overflow-hidden transition-all duration-200 group-hover:shadow-xl group-hover:-translate-y-1 relative" data-game-id="<%= game.id %>">
                            <!-- Featured Badge -->
                            <div class="absolute top-2 left-2 z-10">
                                <span class="bg-gradient-to-r from-yellow-400 to-orange-500 text-white text-xs font-bold px-2 py-1 rounded-full shadow-md border border-yellow-300/50">
                                    <%= __('games.featured_badge') %>
                                </span>
                            </div>
                            
                            <% if (game.parsedThumbnail && game.parsedThumbnail.webp && game.parsedThumbnail.original) {
                                let webpImage = game.parsedThumbnail.webp.thumbnail || game.parsedThumbnail.webp.standard;
                                let originalImage = game.parsedThumbnail.original.thumbnail || game.parsedThumbnail.original.standard;
                                
                                if (webpImage && originalImage) { %>
                                    <picture>
                                        <source srcset="/<%= webpImage.relativePath %>" type="image/webp">
                                        <img src="/<%= originalImage.relativePath %>" alt="<%= game.title %>" class="w-full h-full object-cover" loading="lazy">
                                    </picture>
                                <% } else { %>
                                    <img src="https://dummyimage.com/200x200/9CA3AF/FFFFFF?text=<%= encodeURIComponent(game.title) %>" alt="<%= game.title %>" class="w-full h-full object-cover" loading="lazy">
                                <% }
                            } else if (game.thumbnail) { %>
                                <img src="<%= game.thumbnail.startsWith('/') ? game.thumbnail : '/' + game.thumbnail %>" alt="<%= game.title %>" class="w-full h-full object-cover" loading="lazy">
                            <% } else { %>
                                <img src="https://dummyimage.com/200x200/9CA3AF/FFFFFF?text=<%= encodeURIComponent(game.title) %>" alt="<%= game.title %>" class="w-full h-full object-cover" loading="lazy">
                            <% } %>
                            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-60 transition-all duration-300 flex flex-col items-center justify-between p-3">
                                <!-- Play Icon -->
                                <div class="flex-1 flex items-center justify-center">
                                    <svg class="w-8 h-8 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M8 5v14l11-7z"/>
                                    </svg>
                                </div>
                                <!-- Game Title at Bottom -->
                                <div class="text-center text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300 transform translate-y-2 group-hover:translate-y-0">
                                    <h3 class="font-bold text-sm line-clamp-2"><%= game.title %></h3>
                                </div>
                            </div>
                        </div>
                    </a>
                <% }); %>
            </div>
            <% } %>

            <!-- Categories Grid -->
            <div class="grid gap-6 lg:gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
                <% 
                // Helper function to lighten a hex color
                function lightenColor(hex, percent) {
                    const num = parseInt(hex.replace("#", ""), 16);
                    const amt = Math.round(2.55 * percent);
                    const R = (num >> 16) + amt;
                    const G = (num >> 8 & 0x00FF) + amt;
                    const B = (num & 0x0000FF) + amt;
                    return "#" + (0x1000000 + (R < 255 ? R < 1 ? 0 : R : 255) * 0x10000 +
                        (G < 255 ? G < 1 ? 0 : G : 255) * 0x100 +
                        (B < 255 ? B < 1 ? 0 : B : 255)).toString(16).slice(1);
                }
                
                // Helper function for proper singular/plural
                function pluralize(count, singular, plural) {
                    return count === 1 ? singular : plural;
                }
                
                // Fallback color schemes for categories without custom colors
                const fallbackColors = ['#3B82F6', '#10B981', '#F59E0B', '#8B5CF6', '#EF4444', '#6366F1'];
                %>
                

                <% if (categories && categories.length > 0) { %>
                    <% categories.forEach((category, index) => { %>
                        <% 
                        const categoryColor = category.color || fallbackColors[index % fallbackColors.length];
                        const lightColor = lightenColor(categoryColor, 30);
                        %>
                        <section class="space-y-4">
                            <div class="relative rounded-2xl overflow-hidden text-white shadow-lg min-h-[160px]">
                                <!-- Background layer with image and gradient -->
                                <div class="absolute inset-0">
                                    <% if (category.image) { %>
                                    <!-- Image background -->
                                    <% 
                                        let categoryImageUrl = category.image;
                                        // Check if it's the new JSON format
                                        try {
                                            if (typeof category.image === 'string' && category.image.startsWith('{')) {
                                                let parsedData = JSON.parse(category.image);
                                                if (parsedData.webp && parsedData.webp.large) {
                                                    categoryImageUrl = `/${parsedData.webp.large.relativePath}`;
                                                } else if (parsedData.original && parsedData.original.large) {
                                                    categoryImageUrl = `/${parsedData.original.large.relativePath}`;
                                                }
                                            } else {
                                                categoryImageUrl = category.image.startsWith('/') ? category.image : '/' + category.image;
                                            }
                                        } catch(e) {
                                            categoryImageUrl = category.image.startsWith('/') ? category.image : '/' + category.image;
                                        }
                                    %>
                                    <div class="absolute inset-0 bg-center bg-cover" style="background-image: url('<%= categoryImageUrl %>')"></div>
                                    <!-- Gradient overlay that blends with the image -->
                                    <div class="absolute inset-0" style="background: linear-gradient(135deg, <%= categoryColor %>CC 0%, <%= lightenColor(categoryColor, -20) %>E6 50%, <%= categoryColor %>99 100%)"></div>
                                    <% } else { %>
                                    <!-- Pure gradient background when no image -->
                                    <div class="absolute inset-0" style="background: linear-gradient(135deg, <%= categoryColor %> 0%, <%= lightenColor(categoryColor, -20) %> 100%)"></div>
                                    <% } %>
                                </div>
                                
                                <!-- Content layer -->
                                <div class="relative z-10 p-6 flex items-center min-h-[160px]">
                                    <div class="flex-1">
                                        <h2 class="text-2xl lg:text-3xl font-bold text-white drop-shadow-lg"><%= category.name %></h2>
                                        <% const gameCount = category.totalGames; %>
                                        <p class="mt-2 mb-4 text-white/90 text-sm lg:text-base drop-shadow"><%= gameCount %> <%= gameCount === 1 ? __('common.game') : __('common.games') %> <%= __('common.available_to_play') %></p>
                                        <a href="/games/category/<%= category.slug %>"
                                            class="inline-flex items-center gap-2 border-2 border-white/80 rounded-full px-4 py-2 text-sm font-medium text-white hover:bg-white hover:border-white transition-all duration-200 group backdrop-blur-sm" 
                                            style="--category-color: <%= categoryColor %>;" 
                                            onmouseover="this.style.color='var(--category-color)'"
                                            onmouseout="this.style.color='white'"
                                            system-nav>
                                            <span><%= __('games.explore_games') %></span>
                                            <svg class="w-3 h-3 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                            </svg>
                                        </a>
                                    </div>
                                    
                                    <!-- Icon overlay (only when no image) -->
                                    <% if (!category.image && category.icon) { %>
                                    <div class="hidden lg:flex absolute right-6 top-1/2 transform -translate-y-1/2 opacity-20">
                                        <img src="/assets/images/heroicons/<%= category.icon %>.svg" alt="<%= category.name %>" class="w-16 h-16 brightness-0 saturate-100 invert" />
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                            <div class="relative group">
                                <div id="<%= category.slug %>-list"
                                    class="flex gap-3 overflow-x-auto scroll-smooth snap-x snap-mandatory px-1 py-2 scrollbar-none">
                                    <% if (category.games && category.games.length > 0) { %>
                                        <% category.games.forEach(game => { %>
                                            <a href="/play/<%= game.slug %>" class="flex-shrink-0 snap-center game-item group/game" system-nav>
                                                <div class="game-thumbnail relative overflow-hidden rounded-xl shadow-md group-hover/game:shadow-lg transition-all duration-200" data-game-id="<%= game.id %>">
                                                    <% if (game.parsedThumbnail && game.parsedThumbnail.webp && game.parsedThumbnail.original) {
                                                        let webpImage = game.parsedThumbnail.webp.thumbnail || game.parsedThumbnail.webp.standard;
                                                        let originalImage = game.parsedThumbnail.original.thumbnail || game.parsedThumbnail.original.standard;
                                                        
                                                        if (webpImage && originalImage) { %>
                                                            <picture>
                                                                <source srcset="/<%= webpImage.relativePath %>" type="image/webp">
                                                                <img src="/<%= originalImage.relativePath %>" alt="<%= game.title %>" class="w-32 h-32 sm:w-40 sm:h-40 object-cover" loading="lazy">
                                                            </picture>
                                                        <% } else { %>
                                                            <img src="https://dummyimage.com/200x200/9CA3AF/FFFFFF?text=<%= encodeURIComponent(game.title) %>" alt="<%= game.title %>" class="w-32 h-32 sm:w-40 sm:h-40 object-cover" loading="lazy">
                                                        <% }
                                                    } else if (game.thumbnail) { %>
                                                        <img src="<%= game.thumbnail.startsWith('/') ? game.thumbnail : '/' + game.thumbnail %>" alt="<%= game.title %>" class="w-32 h-32 sm:w-40 sm:h-40 object-cover" loading="lazy">
                                                    <% } else { %>
                                                        <img src="https://dummyimage.com/200x200/9CA3AF/FFFFFF?text=<%= encodeURIComponent(game.title) %>" alt="<%= game.title %>" class="w-32 h-32 sm:w-40 sm:h-40 object-cover" loading="lazy">
                                                    <% } %>
                                                    <div class="absolute inset-0 bg-black bg-opacity-0 group-hover/game:bg-opacity-20 transition-all duration-200 flex items-center justify-center">
                                                        <svg class="w-6 h-6 text-white opacity-0 group-hover/game:opacity-100 transition-opacity duration-200" fill="currentColor" viewBox="0 0 24 24">
                                                            <path d="M8 5v14l11-7z"/>
                                                        </svg>
                                                    </div>
                                                    <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black to-transparent p-2">
                                                        <p class="text-white text-xs font-medium truncate"><%= game.title %></p>
                                                    </div>
                                                </div>
                                            </a>
                                        <% }); %>
                                    <% } %>
                                </div>
                                
                                <!-- Navigation arrows (always show if more than 3 games) -->
                                <% if (category.games && category.games.length > 3) { %>
                                <button
                                    class="carousel-btn-prev absolute left-0 top-1/2 transform -translate-y-1/2 -translate-x-2 bg-white/90 backdrop-blur-sm p-3 rounded-full shadow-lg hover:bg-white hover:shadow-xl transition-all duration-200 opacity-0 group-hover:opacity-100 z-10"
                                    onclick="window.scrollCarousel('<%= category.slug %>-list', 'prev')"
                                    style="background-color: <%= categoryColor %>20; border: 2px solid <%= categoryColor %>;">
                                    <svg class="w-5 h-5" style="color: <%= categoryColor %>;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                                    </svg>
                                </button>
                                <button
                                    class="carousel-btn-next absolute right-0 top-1/2 transform -translate-y-1/2 translate-x-2 bg-white/90 backdrop-blur-sm p-3 rounded-full shadow-lg hover:bg-white hover:shadow-xl transition-all duration-200 opacity-0 group-hover:opacity-100 z-10"
                                    onclick="window.scrollCarousel('<%= category.slug %>-list', 'next')"
                                    style="background-color: <%= categoryColor %>20; border: 2px solid <%= categoryColor %>;">
                                    <svg class="w-5 h-5" style="color: <%= categoryColor %>;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </button>
                                <% } %>
                                
                                <!-- Scroll indicators -->
                                <% if (category.games && category.games.length > 3) { %>
                                <div class="flex justify-center mt-3 space-x-1">
                                    <% for (let i = 0; i < Math.ceil(category.games.length / 3); i++) { %>
                                        <div class="w-2 h-2 rounded-full bg-gray-300 transition-colors duration-200" 
                                             data-indicator="<%= category.slug %>-indicator-<%= i %>"></div>
                                    <% } %>
                                </div>
                                <% } %>
                            </div>
                        </section>
                    <% }); %>
                <% } else { %>
                    <!-- Fallback content when no categories -->
                    <div class="col-span-full text-center py-16">
                        <div class="max-w-lg mx-auto space-y-6">
                            <div class="relative">
                                <div class="w-24 h-24 bg-gradient-to-br from-pink-500 to-purple-600 rounded-full mx-auto flex items-center justify-center shadow-lg">
                                    <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M8 5v14l11-7z"/>
                                    </svg>
                                </div>
                                <div class="absolute -top-1 -right-1 w-8 h-8 bg-yellow-400 rounded-full flex items-center justify-center">
                                    <svg class="w-4 h-4 text-yellow-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                                    </svg>
                                </div>
                            </div>
                            <div class="space-y-3">
                                <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100"><%= __('games.loading_categories') %></h3>
                                <p class="text-gray-600 dark:text-gray-300 text-lg"><%= __('games.loading_categories_desc') %></p>
                            </div>
                            <div class="flex justify-center space-x-2">
                                <div class="w-3 h-3 bg-pink-500 rounded-full animate-bounce"></div>
                                <div class="w-3 h-3 bg-purple-500 rounded-full animate-bounce" style="animation-delay: 0.1s"></div>
                                <div class="w-3 h-3 bg-blue-500 rounded-full animate-bounce" style="animation-delay: 0.2s"></div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>

            <!-- Top Searches -->
            <% 
            // Check if there are any games in the system
            const hasGames = categories && categories.length > 0 && categories.some(cat => cat.games && cat.games.length > 0);
            %>
            <% if (hasGames) { %>
            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-700 p-6">
                <div class="flex items-center justify-between mb-6">
                    <div class="flex items-center">
                        <svg class="w-6 h-6 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                        <h3 class="font-semibold text-gray-800 dark:text-gray-200 text-lg">
                            <%= __('search.top_searches') %>
                        </h3>
                    </div>
                    <div class="text-xs text-gray-500 dark:text-gray-400 bg-gray-50 dark:bg-gray-700 px-2 py-1 rounded-full">
<%= __('common.last_30_days') %>
                    </div>
                </div>
                <div class="flex flex-wrap gap-3">
                    <% if (topSearches && topSearches.length > 0) { %>
                        <% topSearches.forEach((search, index) => { %>
                            <% 
                            // Create color variations for different search terms
                            const colors = [
                                'bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 border-blue-100 dark:border-blue-800 hover:bg-blue-100 dark:hover:bg-blue-800/30',
                                'bg-purple-50 dark:bg-purple-900/20 text-purple-600 dark:text-purple-400 border-purple-100 dark:border-purple-800 hover:bg-purple-100 dark:hover:bg-purple-800/30',
                                'bg-green-50 dark:bg-green-900/20 text-green-600 dark:text-green-400 border-green-100 dark:border-green-800 hover:bg-green-100 dark:hover:bg-green-800/30',
                                'bg-orange-50 dark:bg-orange-900/20 text-orange-600 dark:text-orange-400 border-orange-100 dark:border-orange-800 hover:bg-orange-100 dark:hover:bg-orange-800/30',
                                'bg-pink-50 dark:bg-pink-900/20 text-pink-600 dark:text-pink-400 border-pink-100 dark:border-pink-800 hover:bg-pink-100 dark:hover:bg-pink-800/30',
                                'bg-indigo-50 dark:bg-indigo-900/20 text-indigo-600 dark:text-indigo-400 border-indigo-100 dark:border-indigo-800 hover:bg-indigo-100 dark:hover:bg-indigo-800/30',
                                'bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 border-red-100 dark:border-red-800 hover:bg-red-100 dark:hover:bg-red-800/30',
                                'bg-yellow-50 dark:bg-yellow-900/20 text-yellow-600 dark:text-yellow-400 border-yellow-100 dark:border-yellow-800 hover:bg-yellow-100 dark:hover:bg-yellow-800/30'
                            ];
                            const colorClass = colors[index % colors.length];
                            %>
                            <a href="/search/<%= encodeURIComponent(search.query) %>" 
                               class="<%= colorClass %> px-4 py-2 rounded-full font-medium transition-all duration-200 cursor-pointer border flex items-center space-x-2 hover:shadow-sm" 
                               system-nav>
                                <span><%= search.query %></span>
                                <span class="text-xs opacity-70 bg-white/50 dark:bg-black/30 px-1.5 py-0.5 rounded-full">
                                    <%= search.search_count %>
                                </span>
                            </a>
                        <% }); %>
                    <% } else { %>
                        <!-- Fallback tags when no top searches are available -->
                        <span class="bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 px-4 py-2 rounded-full font-medium transition-colors duration-200 cursor-pointer border border-blue-100 dark:border-blue-800 hover:bg-blue-100 dark:hover:bg-blue-800/30">action</span>
                        <span class="bg-purple-50 dark:bg-purple-900/20 text-purple-600 dark:text-purple-400 px-4 py-2 rounded-full font-medium transition-colors duration-200 cursor-pointer border border-purple-100 dark:border-purple-800 hover:bg-purple-100 dark:hover:bg-purple-800/30">adventure</span>
                        <span class="bg-green-50 dark:bg-green-900/20 text-green-600 dark:text-green-400 px-4 py-2 rounded-full font-medium transition-colors duration-200 cursor-pointer border border-green-100 dark:border-green-800 hover:bg-green-100 dark:hover:bg-green-800/30">puzzle</span>
                        <span class="bg-orange-50 dark:bg-orange-900/20 text-orange-600 dark:text-orange-400 px-4 py-2 rounded-full font-medium transition-colors duration-200 cursor-pointer border border-orange-100 dark:border-orange-800 hover:bg-orange-100 dark:hover:bg-orange-800/30">racing</span>
                        <span class="bg-pink-50 dark:bg-pink-900/20 text-pink-600 dark:text-pink-400 px-4 py-2 rounded-full font-medium transition-colors duration-200 cursor-pointer border border-pink-100 dark:border-pink-800 hover:bg-pink-100 dark:hover:bg-pink-800/30">strategy</span>
                        <span class="bg-indigo-50 dark:bg-indigo-900/20 text-indigo-600 dark:text-indigo-400 px-4 py-2 rounded-full font-medium transition-colors duration-200 cursor-pointer border border-indigo-100 dark:border-indigo-800 hover:bg-indigo-100 dark:hover:bg-indigo-800/30">arcade</span>
                    <% } %>
                </div>
                <% if (topSearches && topSearches.length > 0) { %>
                <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-600">
                    <p class="text-xs text-gray-500 dark:text-gray-400 flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
<%= __('search.community_activity') %>
                    </p>
                </div>
                <% } %>
            </div>
            <% } %>


            <!-- Popular Tags -->
            <% if (hasGames) { %>
            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-700 p-6">
                <div class="flex items-center justify-between mb-6">
                    <div class="flex items-center">
                        <svg class="w-6 h-6 text-purple-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                        </svg>
                        <h3 class="font-semibold text-gray-800 dark:text-gray-200 text-lg"><%= __('games.popular_tags') %></h3>
                    </div>
                    <div class="text-xs text-gray-500 dark:text-gray-400 bg-gray-50 dark:bg-gray-700 px-2 py-1 rounded-full">
<%= __('games.from_top_games') %>
                    </div>
                </div>
                <div class="flex flex-wrap gap-3 text-sm">
                    <% if (popularTags && popularTags.length > 0) { %>
                        <% popularTags.forEach((tagData, index) => { %>
                            <% 
                            // Create color variations for different tags
                            const tagColors = [
