<%- include('../header.ejs', { page }) %>

    <%- include('../modules/sidebar.block.ejs', { page }) %>

    <%- include('../modules/header.block.ejs', { page }) %>

    <div system-wrapper>
        <!-- main content -->
        <main class="container mx-auto px-4 sm:px-6 py-8 lg:py-12">
            <div class="flex items-center justify-center min-h-[70vh]">
                <div class="max-w-3xl w-full">
                    <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-2xl overflow-hidden border border-gray-100 dark:border-gray-700 relative">
                        <!-- Subtle background pattern -->
                        <div class="absolute inset-0 opacity-5">
                            <div class="absolute top-0 left-0 w-40 h-40 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full transform -translate-x-20 -translate-y-20"></div>
                            <div class="absolute bottom-0 right-0 w-32 h-32 bg-gradient-to-tl from-orange-400 to-pink-500 rounded-full transform translate-x-16 translate-y-16"></div>
                        </div>
                        
                        <!-- Header Section -->
                        <div class="bg-gradient-to-r from-blue-500 to-blue-600 p-8 lg:p-10 text-center relative overflow-hidden">
                            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent opacity-50"></div>
                            <div class="relative z-10">
                                <div class="inline-flex items-center justify-center w-24 h-24 bg-white/20 backdrop-blur-sm rounded-full mb-6 transform hover:scale-110 transition-transform duration-300">
                                    <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                </div>
                                <h1 class="text-3xl lg:text-4xl font-bold text-white mb-3">
                                    <%= __('maintenance.title') || "We'll Be Right Back!" %>
                                </h1>
                                <p class="text-blue-100 text-lg lg:text-xl max-w-lg mx-auto">
                                    <%= __('maintenance.subtitle') || 'Our site is currently undergoing maintenance' %>
                                </p>
                            </div>
                        </div>
                        
                        <!-- Content Section -->
                        <div class="p-8 lg:p-10 text-center relative">
                            <div class="mb-10">
                                <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-50 dark:bg-blue-900/30 rounded-full mb-6 transform hover:scale-110 transition-transform duration-300">
                                    <svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <h2 class="text-2xl font-semibold text-gray-800 dark:text-gray-100 mb-4">
                                    <%= __('maintenance.scheduled') || 'Scheduled Maintenance' %>
                                </h2>
                                <p class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto text-base leading-relaxed">
                                    <%= __('maintenance.description') || "We're working hard to improve your gaming experience. This shouldn't take too long!" %>
                                </p>
                            </div>
                            
                            <!-- Feature Updates Grid -->
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12 max-w-4xl mx-auto">
                                <div class="bg-gray-50 dark:bg-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 rounded-2xl p-6 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg">
                                    <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl flex items-center justify-center mx-auto mb-4">
                                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                                        </svg>
                                    </div>
                                    <h3 class="font-semibold text-gray-800 dark:text-gray-100 mb-2"><%= __('maintenance.performance_upgrades') || 'Performance' %></h3>
                                    <p class="text-sm text-gray-600 dark:text-gray-300"><%= __('maintenance.performance_upgrades_desc') || 'Server optimizations and speed improvements' %></p>
                                </div>
                                <div class="bg-gray-50 dark:bg-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 rounded-2xl p-6 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg">
                                    <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-green-600 rounded-xl flex items-center justify-center mx-auto mb-4">
                                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                                        </svg>
                                    </div>
                                    <h3 class="font-semibold text-gray-800 dark:text-gray-100 mb-2"><%= __('maintenance.security_updates') || 'Security' %></h3>
                                    <p class="text-sm text-gray-600 dark:text-gray-300"><%= __('maintenance.security_updates_desc') || 'Latest security updates and patches' %></p>
                                </div>
                                <div class="bg-gray-50 dark:bg-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 rounded-2xl p-6 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg">
                                    <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-purple-600 rounded-xl flex items-center justify-center mx-auto mb-4">
                                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                                        </svg>
                                    </div>
                                    <h3 class="font-semibold text-gray-800 dark:text-gray-100 mb-2"><%= __('maintenance.new_features') || 'Features' %></h3>
                                    <p class="text-sm text-gray-600 dark:text-gray-300"><%= __('maintenance.new_features_desc') || 'New features and improvements' %></p>
                                </div>
                            </div>
                            
                            <!-- Progress Indicator -->
                            <div class="mb-10">
                                <div class="flex justify-center space-x-2 mb-4">
                                    <div class="w-3 h-3 bg-blue-500 rounded-full animate-bounce"></div>
                                    <div class="w-3 h-3 bg-blue-400 rounded-full animate-bounce" style="animation-delay: 0.1s;"></div>
                                    <div class="w-3 h-3 bg-blue-300 rounded-full animate-bounce" style="animation-delay: 0.2s;"></div>
                                </div>
                                <p class="text-gray-500 dark:text-gray-400 text-sm"><%= __('maintenance.working_on_improvements') || 'Working on improvements...' %></p>
                            </div>
                            
                            <!-- Admin Login Section -->
                            <% if (!user) { %>
                                <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 border border-blue-100 dark:border-blue-700 rounded-2xl p-6 lg:p-8">
                                    <div class="flex items-center justify-center mb-4">
                                        <svg class="w-6 h-6 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                        </svg>
                                        <h3 class="text-lg font-semibold text-blue-800 dark:text-blue-200"><%= __('maintenance.administrator_access') || 'Administrator Access' %></h3>
                                    </div>
                                    <p class="text-blue-600 dark:text-blue-300 mb-6 text-sm">
                                        <%= __('maintenance.admin_only_notice') || 'During maintenance, only administrators can login!' %>
                                    </p>
                                    <a href="/auth/login" class="inline-flex items-center justify-center px-8 py-3 bg-gradient-to-r from-blue-500 to-blue-600 text-white font-semibold rounded-xl hover:from-blue-600 hover:to-blue-700 transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl">
                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                                        </svg>
                                        <%= __('maintenance.admin_login_only') || 'Admin Login Only' %>
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    
                    <!-- Footer Message -->
                    <div class="mt-8 text-center">
                        <div class="bg-white/70 dark:bg-gray-800/70 backdrop-blur-sm border border-gray-200 dark:border-gray-600 rounded-2xl p-6 shadow-lg">
                            <div class="flex items-center justify-center mb-3">
                                <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                                </svg>
                                <h4 class="text-lg font-semibold text-gray-800 dark:text-gray-100"><%= __('maintenance.thank_you_for_patience') || 'Thank You for Your Patience' %></h4>
                            </div>
                            <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed max-w-lg mx-auto">
                                <%= __('maintenance.apology_message') || 'We apologize for any inconvenience. Thank you for your patience!' %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <%- include('../modules/footer.block.ejs', { page }) %>

