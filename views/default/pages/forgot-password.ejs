<%- include('../header.ejs', { page }) %>

    <%- include('../modules/sidebar.block.ejs', { page }) %>

    <%- include('../modules/header.block.ejs', { page }) %>

    <div system-wrapper>
        <!-- main content -->
        <main class="min-h-screen flex items-center justify-center px-4 sm:px-6 py-12">
            <div class="w-full max-w-4xl">

                <!-- Forgot Password Card -->
                <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg dark:shadow-2xl border border-gray-100 dark:border-gray-700 overflow-hidden">
                    <div class="grid grid-cols-1 lg:grid-cols-2 min-h-[600px]">
                        
                        <!-- Left Column - Forgot Password Form -->
                        <div class="p-8 flex flex-col justify-center">

                            <!-- Header -->
                            <div class="text-center mb-8">
                                <div class="mx-auto h-16 w-16 flex items-center justify-center rounded-full bg-orange-100 dark:bg-orange-900/30 mb-4">
                                    <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                                    </svg>
                                </div>
                                <h1 class="text-gray-600 dark:text-gray-200 text-2xl font-bold"><%= __('auth.forgot_password_title') %></h1>
                                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                                    <%= __('auth.forgot_password_desc') %>
                                </p>
                            </div>

                            <!-- Forgot Password Form -->
                            <form id="forgotPasswordForm" class="space-y-6">
                                <!-- CSRF Token -->
                                <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />

                                <!-- Email Field -->
                                <div class="space-y-2">
                                    <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                        <%= __('auth.email_address') %>
                                    </label>
                                    <div class="relative">
                                        <input type="email" id="email" name="email" required placeholder="<%= __('auth.email_placeholder_forgot') %>"
                                            class="w-full bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent rounded-xl px-4 py-3 pl-12 text-sm transition-all duration-200 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400" />
                                        <svg class="w-5 h-5 absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                        </svg>
                                    </div>
                                </div>

                                <!-- reCAPTCHA -->
                                <% if (locals.recaptcha_site_key && locals.recaptcha_site_key.trim() !== '') { %>
                                <div class="flex justify-center">
                                    <div class="g-recaptcha" data-sitekey="<%= locals.recaptcha_site_key %>"></div>
                                </div>
                                <% } %>

                                <!-- Submit Button -->
                                <button type="submit" id="submitBtn"
                                    class="w-full bg-black dark:bg-gray-700 text-white py-3 px-4 rounded-xl font-medium hover:bg-gray-800 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98] disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none">
                                    <span class="btn-text">
                                        <%= __('auth.send_reset_link') %>
                                    </span>
                                    <span class="btn-loading hidden">
                                        <svg class="w-5 h-5 animate-spin -ml-1 mr-3 text-white inline" fill="none" viewBox="0 0 24 24">
                                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                        </svg>
                                        <%= __('auth.sending') %>
                                    </span>
                                </button>

                                <!-- Back to Login Link -->
                                <div class="text-center space-y-2">
                                    <p class="text-gray-600 dark:text-gray-400">
                                        <%= __('auth.remember_password') %>
                                        <a href="/login"
                                            class="text-orange-500 hover:text-orange-600 font-medium transition-colors duration-200" system-nav>
                                            <%= __('auth.signin') %>
                                        </a>
                                    </p>
                                </div>

                            </form>

                        </div>
                        
                        <!-- Right Column - Information -->
                        <div class="bg-gray-50 dark:bg-gray-700 p-8 flex flex-col justify-center">
                            
                            <!-- Header -->
                            <div class="text-center mb-8">
                                <h2 class="text-xl font-semibold text-gray-700 dark:text-gray-200 mb-2"><%= __('auth.reset_steps') %></h2>
                                <p class="text-gray-500 dark:text-gray-400 text-sm"><%= __('auth.forgot_desc_detailed') %></p>
                            </div>

                            <!-- Recovery Steps -->
                            <div class="space-y-6">
                                <div class="flex items-start space-x-3">
                                    <div class="flex-shrink-0 w-8 h-8 bg-orange-100 dark:bg-orange-900/30 rounded-full flex items-center justify-center">
                                        <span class="text-orange-600 dark:text-orange-400 font-semibold text-sm">1</span>
                                    </div>
                                    <div>
                                        <h3 class="font-medium text-gray-700 dark:text-gray-200"><%= __('auth.reset_step_1') %></h3>
                                        <p class="text-sm text-gray-500 dark:text-gray-400"><%= __('auth.email_address') %></p>
                                    </div>
                                </div>

                                <div class="flex items-start space-x-3">
                                    <div class="flex-shrink-0 w-8 h-8 bg-orange-100 dark:bg-orange-900/30 rounded-full flex items-center justify-center">
                                        <span class="text-orange-600 dark:text-orange-400 font-semibold text-sm">2</span>
                                    </div>
                                    <div>
                                        <h3 class="font-medium text-gray-700 dark:text-gray-200"><%= __('auth.reset_step_2') %></h3>
                                        <p class="text-sm text-gray-500 dark:text-gray-400"><%= __('auth.reset_step_3') %></p>
                                    </div>
                                </div>

                                <div class="flex items-start space-x-3">
                                    <div class="flex-shrink-0 w-8 h-8 bg-orange-100 dark:bg-orange-900/30 rounded-full flex items-center justify-center">
                                        <span class="text-orange-600 dark:text-orange-400 font-semibold text-sm">3</span>
                                    </div>
                                    <div>
                                        <h3 class="font-medium text-gray-700 dark:text-gray-200"><%= __('auth.reset_step_4') %></h3>
                                        <p class="text-sm text-gray-500 dark:text-gray-400"><%= __('auth.new_password') %></p>
                                    </div>
                                </div>
                            </div>

                            <!-- Security Info -->
                            <div class="text-center text-sm text-gray-500 dark:text-gray-400 mt-8">
                                <p class="mb-2"><%= __('auth.secure_auth') %></p>
                                <div class="flex justify-center space-x-4">
                                    <span class="flex items-center">
                                        <svg class="w-4 h-4 mr-1 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                                        </svg>
                                        <%= __('auth.secure') %>
                                    </span>
                                    <span class="flex items-center">
                                        <svg class="w-4 h-4 mr-1 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                        </svg>
                                        <%= __('auth.fast') %>
                                    </span>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>

                <!-- Footer Info -->
                <div class="text-center mt-8">
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        <%= __('common.help') %>? <%= __('nav.contact_us') %> 
                        <a href="#" class="text-orange-500 hover:text-orange-600 transition-colors duration-200"><%= __('common.support') %></a>
                        <%= __('nav.help_support') %>
                    </p>
                </div>


            </div>
        </main>
    </div>

    <%- include('../modules/footer.block.ejs', { page }) %>

<%- include('../footer.ejs', { page }) %>