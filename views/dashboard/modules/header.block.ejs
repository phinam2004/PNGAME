<nav class="sticky top-0 z-50 flex items-center border-b border-gray-200/50 bg-white/80 py-3 backdrop-blur-xl shadow-sm" id="topbar">
    <!-- Hamburger for mobile -->
    <button id="sidebarToggleBtn" class="ml-4 mr-2 flex items-center justify-center w-10 h-10 rounded-full bg-white shadow-xl transition-all duration-200 hover:shadow-2xl hover:bg-gray-50 lg:hidden">
        <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
    </button>
    <div class="flex-1 mx-auto flex max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
        <div class="flex items-center gap-2 sm:gap-3 overflow-x-auto">
            <a class="group inline-flex items-center gap-1 sm:gap-2 rounded-xl bg-gradient-to-r from-blue-600 to-indigo-600 px-3 sm:px-4 py-2 text-xs sm:text-sm font-medium text-white shadow-xl transition-all duration-200 hover:from-blue-700 hover:to-indigo-700 hover:shadow-2xl whitespace-nowrap" href="/" target="_blank">
                <svg class="w-4 h-4 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                <span class="hidden sm:inline"><%= __('dashboard.view_site') %></span>
                <span class="sm:hidden"><%= __('dashboard.site') %></span>
            </a>
            <a class="group inline-flex items-center gap-1 sm:gap-2 rounded-xl bg-gradient-to-r from-green-600 to-emerald-600 px-3 sm:px-4 py-2 text-xs sm:text-sm font-medium text-white shadow-xl transition-all duration-200 hover:from-green-700 hover:to-emerald-700 hover:shadow-2xl whitespace-nowrap" href="/sitemap.xml" target="_blank">
                <svg class="w-4 h-4 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2"></path>
                </svg>
                <span class="hidden sm:inline"><%= __('dashboard.sitemap') %></span>
                <span class="sm:hidden"><%= __('dashboard.xml') %></span>
            </a>
        </div>

        <div class="flex items-center gap-3">
            <!-- Language Switcher -->
            <div class="relative" id="languageSwitcher">
                <button id="languageDropdownBtn" class="flex items-center gap-2 p-2 rounded-lg hover:bg-gray-100 transition-colors duration-200">
                    <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
                    </svg>
                    <span class="hidden sm:inline text-sm font-medium text-gray-700"><%= currentLanguageInfo?.nativeName || 'English' %></span>
                    <svg class="w-3 h-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
                <div id="languageDropdown" class="absolute right-0 top-full mt-2 w-48 bg-white rounded-xl shadow-lg border border-gray-100 hidden z-50">
                    <div class="max-h-64 overflow-y-auto py-2 scrollbar-thin scrollbar-thumb-gray-300 scrollbar-track-gray-100">
                        <% if (availableLanguages && availableLanguages.length > 0) { %>
                            <% availableLanguages.forEach(lang => { %>
                                <button onclick="changeLanguage('<%= lang.code %>')" 
                                        class="flex items-center w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-200 <%= currentLanguage === lang.code ? 'bg-blue-50 text-blue-600' : '' %>"
                                        role="menuitem"
                                        tabindex="-1">
                                    <span class="flex-1 text-left"><%= lang.nativeName %></span>
                                    <% if (currentLanguage === lang.code) { %>
                                        <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                        </svg>
                                    <% } %>
                                </button>
                            <% }); %>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="relative" system-usernav>
            <button id="userDropdownBtn" class="group flex items-center gap-2 rounded-lg bg-gray-50 px-3 py-2 transition-all duration-200 hover:bg-gray-100 hover:shadow-md">
                <img src="<%= user?.avatarUrl || '/assets/images/default-avatar.jpg' %>" class="h-7 w-7 rounded-full object-cover ring-2 ring-white">
                <span class="hidden sm:inline text-sm font-medium text-gray-700"><%= user?.first_name || user?.username %></span>
                <svg class="w-4 h-4 text-gray-500 transition-transform duration-200 group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
            </button>

            <div id="userDropdown" class="absolute right-0 mt-1 w-40 rounded-lg border border-gray-200 bg-white py-1 shadow-lg" style="display: none;">
                <a href="/settings" target="_blank" class="flex items-center gap-2 px-3 py-2 text-sm text-gray-700 hover:bg-gray-50">
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <%= __('dashboard.settings') %>
                </a>
                <a href="#" class="flex items-center gap-2 px-3 py-2 text-sm text-gray-700 hover:bg-gray-50" system-action="logout">
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                    </svg>
                    <%= __('dashboard.logout') %>
                </a>
            </div>
            </div>
        </div>
    </div>
</nav>