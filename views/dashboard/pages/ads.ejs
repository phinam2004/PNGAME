<%- include('../header.ejs', { page }) %>

<div class="flex min-h-screen bg-gray-50/50">
    <!-- Sidebar -->
    <%- include('../modules/sidebar.block.ejs', { page }) %>

    <!-- Main area -->
    <div class="flex-1 flex flex-col min-w-0" system-wrapper>
        <!-- Header (topbar) -->
        <%- include('../modules/header.block.ejs', { page }) %>
        <!-- Main content -->
        <div class="flex-1">
            <!-- Page Header -->
            <div class="border-b border-gray-200/50 bg-white/80 py-4 sm:py-6 lg:py-8 backdrop-blur-sm shadow-sm">
                <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                        <div class="flex items-center gap-3 sm:gap-4">
                            <div class="flex h-10 w-10 sm:h-12 sm:w-12 items-center justify-center rounded-xl bg-gradient-to-r from-pink-600 to-red-600 shadow-xl">
                                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
                                </svg>
                            </div>
                            <div>
                                <h1 class="text-xl font-bold text-gray-900 sm:text-2xl lg:text-3xl"><%= __('dashboard.ads.title') %></h1>
                                <p class="text-xs sm:text-sm text-gray-500"><%= __('dashboard.ads.description') %></p>
                            </div>
                        </div>
                        
                        <div class="flex items-center gap-3">
                            <button class="group inline-flex items-center gap-1 sm:gap-2 rounded-xl bg-gradient-to-r from-pink-600 to-red-600 px-3 sm:px-4 py-2 text-xs sm:text-sm font-medium text-white shadow-xl transition-all duration-200 hover:from-pink-700 hover:to-red-700 hover:shadow-2xl hover:-translate-y-1" title="<%= __('dashboard.ads.add_advertisement') %>" system-toggle="create/ads">
                                <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                </svg>
                                <span class="hidden sm:inline"><%= __('dashboard.ads.add_advertisement') %></span>
                                <span class="sm:hidden"><%= __('dashboard.common.add') %></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="mx-auto max-w-7xl px-4 py-4 sm:py-6 lg:py-8 sm:px-6 lg:px-8">
                <!-- Data Table Card -->
                <div class="overflow-hidden rounded-xl bg-white shadow-sm hover:shadow-xl transition-all duration-200">
                    <div class="border-b border-gray-200/50 px-4 sm:px-6 py-4">
                        <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                            <!-- Rows per page selection -->
                            <div class="relative">
                                <select id="systemRowsPerPage" class="w-full sm:w-auto appearance-none rounded-lg border border-gray-300 bg-white px-3 sm:px-4 py-2 pr-8 text-xs sm:text-sm text-gray-700 shadow-md transition-all duration-200 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:shadow-lg">
                                    <option value="10"><%= __('dashboard.common.show_items', { count: 10 }) %></option>
                                    <option value="25"><%= __('dashboard.common.show_items', { count: 25 }) %></option>
                                    <option value="50"><%= __('dashboard.common.show_items', { count: 50 }) %></option>
                                    <option value="100"><%= __('dashboard.common.show_items', { count: 100 }) %></option>
                                </select>
                                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2">
                                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                    </svg>
                                </div>
                            </div>
                            
                            <!-- Search bar -->
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 flex items-center pl-3">
                                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                    </svg>
                                </div>
                                <input type="text" id="systemSearchInput" class="w-full sm:w-64 rounded-lg border border-gray-300 bg-white pl-10 pr-4 py-2 text-xs sm:text-sm text-gray-700 shadow-md transition-all duration-200 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:shadow-lg" placeholder="<%= __('dashboard.ads.search_placeholder') %>">
                            </div>
                        </div>
                    </div>
                    
                    <!-- Table -->
                    <div class="overflow-x-auto">
                        <table id="systemTable" system-table="ads" class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50"></thead>
                            <tbody class="divide-y divide-gray-200 bg-white"></tbody>
                        </table>
                    </div>
                    
                    <!-- Pagination -->
                    <div class="border-t border-gray-200/50 px-4 sm:px-6 py-4">
                        <nav>
                            <ul id="systemPagination" class="flex justify-center"></ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Footer - positioned at bottom -->
        <%- include('../modules/footer.block.ejs', { page }) %>
    </div>
</div>

<%- include('../footer.ejs', { page }) %>