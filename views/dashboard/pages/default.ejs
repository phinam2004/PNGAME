<%- include('../header.ejs', { page }) %>

<div class="flex min-h-screen bg-gray-50/50">
    <!-- Sidebar -->
    <%- include('../modules/sidebar.block.ejs', { page }) %>

    <!-- Main area -->
    <div class="flex-1 flex flex-col min-w-0" system-wrapper>
        <!-- Header (topbar) -->
        <%- include('../modules/header.block.ejs', { page }) %>
        
        <!-- Main content -->
        <div class="flex-1">
            <!-- Page Header -->
            <div class="border-b border-gray-200/50 bg-white/80 py-4 sm:py-6 lg:py-8 backdrop-blur-sm shadow-sm">
                <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                        <div class="flex items-center gap-3 sm:gap-4">
                            <div class="flex h-10 w-10 sm:h-12 sm:w-12 items-center justify-center rounded-xl bg-gradient-to-r from-blue-600 to-indigo-600 shadow-xl">
                                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
                                </svg>
                            </div>
                            <div>
                                <h1 class="text-xl font-bold text-gray-900 sm:text-2xl lg:text-3xl"><%= __('dashboard.overview.title') %></h1>
                                <p class="text-xs sm:text-sm text-gray-500"><%= __('dashboard.overview.description') %></p>
                            </div>
                        </div>
                        
                        <div class="flex items-center gap-3">
                            <button system-toggle="static/cronjobs" class="group inline-flex items-center gap-1 sm:gap-2 rounded-xl bg-gradient-to-r from-blue-600 to-cyan-600 px-3 sm:px-4 py-2 text-xs sm:text-sm font-medium text-white shadow-xl transition-all duration-200 hover:from-blue-700 hover:to-cyan-700 hover:shadow-2xl hover:-translate-y-1" title="Cron Jobs Guide">
                                <svg class="w-5 h-5 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span class="hidden sm:inline"><%= __('dashboard.overview.cron_guide') %></span>
                                <span class="sm:hidden"><%= __('dashboard.overview.cron_guide') %></span>
                            </button>
                            
                            <button id="clearCacheBtn" class="group inline-flex items-center gap-1 sm:gap-2 rounded-xl bg-gradient-to-r from-purple-600 to-pink-600 px-3 sm:px-4 py-2 text-xs sm:text-sm font-medium text-white shadow-xl transition-all duration-200 hover:from-purple-700 hover:to-pink-700 hover:shadow-2xl hover:-translate-y-1" title="Clear System Cache">
                                <svg class="w-5 h-5 transition-transform group-hover:rotate-45" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                                <span class="hidden sm:inline"><%= __('dashboard.overview.clear_cache') %></span>
                                <span class="sm:hidden"><%= __('dashboard.overview.clear_cache') %></span>
                            </button>
                            
                            <button system-toggle="update/settings_system/none" class="group inline-flex items-center gap-1 sm:gap-2 rounded-xl bg-gradient-to-r from-orange-600 to-red-600 px-3 sm:px-4 py-2 text-xs sm:text-sm font-medium text-white shadow-xl transition-all duration-200 hover:from-orange-700 hover:to-red-700 hover:shadow-2xl hover:-translate-y-1" title="System Settings">
                                <svg class="w-5 h-5 transition-transform group-hover:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                                <span class="hidden sm:inline"><%= __('dashboard.overview.system_settings') %></span>
                                <span class="sm:hidden"><%= __('dashboard.overview.system_settings') %></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="mx-auto max-w-7xl px-4 py-4 sm:py-6 lg:py-8 sm:px-6 lg:px-8">
                <!-- Main Stats Cards -->
                <div class="mb-6 sm:mb-8 grid grid-cols-1 gap-4 sm:gap-6 sm:grid-cols-2 lg:grid-cols-4">
                    <div class="group rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 p-4 sm:p-6 shadow-xl transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:scale-105">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-xs sm:text-sm font-medium text-blue-100"><%= __('dashboard.overview.total_users') %></p>
                                <p class="text-xl sm:text-2xl font-bold text-white"><%= stats ? stats.totals.users.toLocaleString() : '0' %></p>
                            </div>
                            <div class="flex h-10 w-10 sm:h-12 sm:w-12 items-center justify-center rounded-lg bg-white/20 text-white shadow-lg group-hover:bg-white/30 transition-all duration-200">
                                <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
                                </svg>
                            </div>
                        </div>
                        <div class="mt-3 sm:mt-4 flex items-center gap-2">
                            <span class="text-xs sm:text-sm text-blue-100">
                                <% if (stats && stats.users.newThisWeek > 0) { %>
                                    <%= __('dashboard.overview.new_users_this_week', { count: stats.users.newThisWeek }) %>
                                <% } else { %>
                                    <%= __('dashboard.overview.no_new_users') %>
                                <% } %>  
                            </span>
                        </div>
                    </div>

                    <div class="group rounded-xl bg-gradient-to-br from-emerald-500 to-emerald-600 p-4 sm:p-6 shadow-xl transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:scale-105">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-xs sm:text-sm font-medium text-emerald-100"><%= __('dashboard.overview.total_games') %></p>
                                <p class="text-xl sm:text-2xl font-bold text-white"><%= stats ? stats.totals.games.toLocaleString() : '0' %></p>
                            </div>
                            <div class="flex h-10 w-10 sm:h-12 sm:w-12 items-center justify-center rounded-lg bg-white/20 text-white shadow-lg group-hover:bg-white/30 transition-all duration-200">
                                <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                                </svg>
                            </div>
                        </div>
                        <div class="mt-3 sm:mt-4 flex items-center gap-2">
                            <span class="text-xs sm:text-sm text-emerald-100">
                                <%= __('dashboard.overview.categories_count', { count: stats ? stats.totals.categories : 0 }) %>
                            </span>
                        </div>
                    </div>

                    <div class="group rounded-xl bg-gradient-to-br from-purple-500 to-purple-600 p-4 sm:p-6 shadow-xl transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:scale-105">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-xs sm:text-sm font-medium text-purple-100"><%= __('dashboard.overview.total_plays') %></p>
                                <p class="text-xl sm:text-2xl font-bold text-white"><%= stats ? stats.totals.gamePlays.toLocaleString() : '0' %></p>
                            </div>
                            <div class="flex h-10 w-10 sm:h-12 sm:w-12 items-center justify-center rounded-lg bg-white/20 text-white shadow-lg group-hover:bg-white/30 transition-all duration-200">
                                <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                        </div>
                        <div class="mt-3 sm:mt-4 flex items-center gap-2">
                            <span class="text-xs sm:text-sm text-purple-100">
                                <%= __('dashboard.overview.active_today', { count: stats ? stats.users.activeToday : 0 }) %>
                            </span>
                        </div>
                    </div>

                    <div class="group rounded-xl bg-gradient-to-br from-orange-500 to-orange-600 p-4 sm:p-6 shadow-xl transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:scale-105">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-xs sm:text-sm font-medium text-orange-100"><%= __('dashboard.overview.community') %></p>
                                <p class="text-xl sm:text-2xl font-bold text-white"><%= stats ? (stats.totals.comments + stats.totals.ratings).toLocaleString() : '0' %></p>
                            </div>
                            <div class="flex h-10 w-10 sm:h-12 sm:w-12 items-center justify-center rounded-lg bg-white/20 text-white shadow-lg group-hover:bg-white/30 transition-all duration-200">
                                <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                                </svg>
                            </div>
                        </div>
                        <div class="mt-3 sm:mt-4 flex items-center gap-2">
                            <span class="text-xs sm:text-sm text-orange-100">
                                <%= __('dashboard.overview.comments_ratings') %>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Advertisement Management Section -->
                <% if (adStats && adStats.placement_stats && adStats.placement_stats.length > 0) { %>
                <div class="mb-6 sm:mb-8">
                    <!-- Section Header -->
                    <div class="rounded-t-xl bg-gradient-to-r from-blue-600 via-purple-600 to-blue-800 p-6 shadow-xl">
                        <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                            <div class="flex items-center gap-4">
                                <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-white/20 backdrop-blur-sm shadow-lg">
                                    <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold text-white"><%= __('dashboard.overview.advertisement_management') %></h3>
                                    <p class="text-blue-100 text-sm"><%= __('dashboard.overview.manage_ads') %></p>
                                </div>
                            </div>
                            
                            <!-- Quick Actions -->
                            <div class="flex flex-wrap gap-2">
                                <a href="/dashboard/ads" class="group inline-flex items-center gap-2 rounded-xl bg-white/10 backdrop-blur-sm px-4 py-2 text-sm font-medium text-white shadow-lg transition-all duration-200 hover:bg-white/20 hover:shadow-xl hover:-translate-y-1" system-nav>
                                    <svg class="w-4 h-4 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                                    </svg>
                                    <span><%= __('dashboard.overview.manage_ads') %></span>
                                </a>
                                <a href="/dashboard/ad_placements" class="group inline-flex items-center gap-2 rounded-xl bg-white/10 backdrop-blur-sm px-4 py-2 text-sm font-medium text-white shadow-lg transition-all duration-200 hover:bg-white/20 hover:shadow-xl hover:-translate-y-1" system-nav>
                                    <svg class="w-4 h-4 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
                                    </svg>
                                    <span><%= __('dashboard.overview.placements') %></span>
                                </a>
                                <button system-toggle="create/ads" class="group inline-flex items-center gap-2 rounded-xl bg-emerald-500 px-4 py-2 text-sm font-medium text-white shadow-lg transition-all duration-200 hover:bg-emerald-600 hover:shadow-xl hover:-translate-y-1">
                                    <svg class="w-4 h-4 transition-transform group-hover:rotate-45" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                    </svg>
                                    <span><%= __('dashboard.overview.new_ad') %></span>
                                </button>
                            </div>
                        </div>
                        
                        <!-- Summary Stats -->
                        <div class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-3">
                            <% 
                            let totalPlacements = adStats.placement_stats.reduce((sum, p) => sum + (p.total_placements || 0), 0);
                            let totalAds = adStats.placement_stats.reduce((sum, p) => sum + (p.total_ads || 0), 0);
                            %>
                            <div class="rounded-lg bg-white/10 backdrop-blur-sm p-4 text-center">
                                <div class="text-2xl font-bold text-white"><%= totalPlacements %></div>
                                <div class="text-xs text-blue-100 uppercase tracking-wide"><%= __('dashboard.overview.total_placements') %></div>
                            </div>
                            <div class="rounded-lg bg-white/10 backdrop-blur-sm p-4 text-center">
                                <div class="text-2xl font-bold text-white"><%= totalAds %></div>
                                <div class="text-xs text-blue-100 uppercase tracking-wide"><%= __('dashboard.overview.total_ads') %></div>
                            </div>
                            <div class="rounded-lg bg-white/10 backdrop-blur-sm p-4 text-center">
                                <div class="text-2xl font-bold text-white"><%= adStats.placement_stats.length %></div>
                                <div class="text-xs text-blue-100 uppercase tracking-wide"><%= __('dashboard.overview.placement_types') %></div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Placement Cards -->
                    <div class="rounded-b-xl bg-white p-6 shadow-xl">
                        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
                            <% adStats.placement_stats.forEach((placement, index) => { %>
                            <% 
                            let typeColor = '#6B7280';
                            let typeName = placement.placement_type.replace(/[-_]/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
                            let typeIcon = 'megaphone';
                            let gradientFrom = 'from-gray-500';
                            let gradientTo = 'to-gray-600';
                            
                            if (placement.placement_type === 'banner') {
                                typeColor = '#3B82F6';
                                typeIcon = 'photograph';
                                gradientFrom = 'from-blue-500';
                                gradientTo = 'to-blue-600';
                            } else if (placement.placement_type === 'emulator') {
                                typeColor = '#10B981';
                                typeIcon = 'desktop-computer';
                                gradientFrom = 'from-emerald-500';
                                gradientTo = 'to-emerald-600';
                            } else if (placement.placement_type === 'game-api') {
                                typeColor = '#8B5CF6';
                                typeIcon = 'code';
                                gradientFrom = 'from-purple-500';
                                gradientTo = 'to-purple-600';
                            }
                            %>
                            
                            <div class="group relative overflow-hidden rounded-xl bg-gradient-to-br <%= gradientFrom %> <%= gradientTo %> p-4 shadow-lg transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
                                <!-- Content -->
                                <div class="text-center">
                                    <!-- Icon -->
                                    <div class="mx-auto mb-3 flex h-10 w-10 items-center justify-center rounded-lg bg-white/20 shadow-lg backdrop-blur-sm">
                                        <% if (placement.placement_type === 'banner') { %>
                                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                            </svg>
                                        <% } else if (placement.placement_type === 'emulator') { %>
                                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2"/>
                                            </svg>
                                        <% } else { %>
                                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                                            </svg>
                                        <% } %>
                                    </div>
                                    
                                    <!-- Title -->
                                    <h4 class="mb-2 text-sm font-bold text-white"><%= typeName %></h4>
                                    
                                    <!-- Key Stats -->
                                    <div class="mb-3 space-y-1">
                                        <div class="flex items-center justify-between text-xs text-white/90">
                                            <span><%= __('dashboard.overview.placements') %>:</span>
                                            <span class="font-semibold"><%= placement.total_placements || 0 %></span>
                                        </div>
                                        <div class="flex items-center justify-between text-xs text-white/90">
                                            <span><%= __('dashboard.overview.active_ads') %>:</span>
                                            <span class="font-semibold"><%= placement.active_ads || 0 %>/<%= placement.total_ads || 0 %></span>
                                        </div>
                                    </div>
                                    
                                    <!-- Status Badge -->
                                    <% if (placement.active_placements > 0) { %>
                                        <span class="inline-flex items-center gap-1 rounded-full bg-emerald-500/20 px-2 py-1 text-xs font-medium text-white backdrop-blur-sm">
                                            <div class="h-1.5 w-1.5 rounded-full bg-emerald-400"></div>
                                            <%= __('dashboard.overview.active') %>
                                        </span>
                                    <% } else { %>
                                        <span class="inline-flex items-center gap-1 rounded-full bg-red-500/20 px-2 py-1 text-xs font-medium text-white backdrop-blur-sm">
                                            <div class="h-1.5 w-1.5 rounded-full bg-red-400"></div>
                                            <%= __('dashboard.overview.inactive') %>
                                        </span>
                                    <% } %>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Category Stats -->
                <% if (stats && stats.categories && stats.categories.length > 0) { %>
                <div class="mb-6 sm:mb-8">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
                            <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                            </svg>
                            <%= __('dashboard.overview.game_categories') %>
                        </h3>
                        <span class="text-sm text-gray-500"><%= __('dashboard.overview.categories_count', { count: stats.categories.length }) %></span>
                    </div>
                    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-3">
                        <% stats.categories.slice(0, 6).forEach(category => { %>
                        <div class="group relative rounded-lg bg-white p-4 shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1 overflow-hidden border border-gray-100">
                            <!-- Background gradient -->
                            <div class="absolute inset-0 opacity-5 group-hover:opacity-10 transition-opacity duration-300" style="background: linear-gradient(135deg, <%= category.color || '#6B7280' %>, <%= category.color || '#6B7280' %>88)"></div>
                            
                            <!-- Content -->
                            <div class="relative z-10">
                                <!-- Icon -->
                                <div class="flex h-12 w-12 items-center justify-center rounded-xl mb-3 mx-auto shadow-lg group-hover:scale-110 transition-transform duration-300" style="background: linear-gradient(135deg, <%= category.color || '#6B7280' %>, <%= category.color || '#6B7280' %>CC);">
                                    <% if (category.icon && !category.icon.includes('la-')) { %>
                                        <img src="/assets/images/heroicons/<%= category.icon %>.svg" alt="<%= category.name %>" class="w-6 h-6 text-white drop-shadow-sm" style="filter: brightness(0) invert(1) drop-shadow(0 1px 1px rgba(0,0,0,0.1));" />
                                    <% } else { %>
                                        <svg class="w-6 h-6 text-white drop-shadow-sm" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                                        </svg>
                                    <% } %>
                                </div>
                                
                                <!-- Category name -->
                                <h4 class="text-sm font-bold text-gray-900 text-center mb-2 truncate"><%= category.name %></h4>
                                
                                <!-- Stats -->
                                <div class="space-y-1">
                                    <div class="flex items-center justify-between text-xs">
                                        <span class="text-gray-500"><%= __('dashboard.overview.games') %></span>
                                        <span class="font-semibold text-gray-900"><%= category.game_count || 0 %></span>
                                    </div>
                                    <div class="flex items-center justify-between text-xs">
                                        <span class="text-gray-500"><%= __('dashboard.overview.plays') %></span>
                                        <span class="font-semibold" style="color: <%= category.color || '#6B7280' %>">
                                            <%= (category.total_plays || 0) > 999 ? ((category.total_plays || 0) / 1000).toFixed(1) + 'k' : (category.total_plays || 0) %>
                                        </span>
                                    </div>
                                </div>
                                
                                <!-- Progress bar -->
                                <div class="mt-3 w-full bg-gray-200 rounded-full h-1.5 overflow-hidden">
                                    <div class="h-full rounded-full transition-all duration-500 shadow-sm" style="background: linear-gradient(90deg, <%= category.color || '#6B7280' %>, <%= category.color || '#6B7280' %>88); width: <%= Math.min(100, ((category.total_plays || 0) / Math.max(...stats.categories.map(c => c.total_plays || 0), 1)) * 100) %>%"></div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
                <% } %>


                <!-- Top Games Section -->
                <div class="mb-6 sm:mb-8 grid grid-cols-1 gap-6 lg:grid-cols-2">
                    <!-- Most Played Games -->
                    <div class="rounded-xl bg-white shadow-md hover:shadow-xl transition-all duration-200">
                        <div class="border-b border-gray-200/50 px-4 sm:px-6 py-4">
                            <h3 class="text-base sm:text-lg font-semibold text-gray-900 flex items-center gap-2">
                                <svg class="w-5 h-5 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                                </svg>
                                <%= __('dashboard.overview.most_played_games') %>
                            </h3>
                            <p class="text-xs sm:text-sm text-gray-500"><%= __('dashboard.overview.top_performing_games') %></p>
                        </div>
                        <div class="p-4 sm:p-6">
                            <% if (stats && stats.topGames && stats.topGames.mostPlayed && stats.topGames.mostPlayed.length > 0) { %>
                                <div class="space-y-4">
                                    <% stats.topGames.mostPlayed.forEach((game, index) => { %>
                                    <div class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-50 transition-colors">
                                        <div class="flex h-8 w-8 items-center justify-center rounded-full bg-gradient-to-r from-blue-500 to-purple-600 text-white font-bold text-sm">
                                            <%= index + 1 %>
                                        </div>
                                        <div class="flex-1">
                                            <p class="text-sm font-medium text-gray-900"><%= game.title %></p>
                                            <p class="text-xs text-gray-500">
                                                <%= game.category_name || __('dashboard.overview.uncategorized') %> • <%= (game.play_count || 0).toLocaleString() %> <%= __('dashboard.overview.plays') %>
                                            </p>
                                        </div>
                                    </div>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <div class="text-center py-8">
                                    <svg class="w-16 h-16 text-gray-300 mb-2 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                                    </svg>
                                    <p class="text-sm text-gray-500"><%= __('dashboard.overview.no_games_data') %></p>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Top Rated Games -->
                    <div class="rounded-xl bg-white shadow-md hover:shadow-xl transition-all duration-200">
                        <div class="border-b border-gray-200/50 px-4 sm:px-6 py-4">
                            <h3 class="text-base sm:text-lg font-semibold text-gray-900 flex items-center gap-2">
                                <svg class="w-5 h-5 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                                </svg>
                                <%= __('dashboard.overview.top_rated_games') %>
                            </h3>
                            <p class="text-xs sm:text-sm text-gray-500"><%= __('dashboard.overview.highest_rated_games') %></p>
                        </div>
                        <div class="p-4 sm:p-6">
                            <% if (stats && stats.topGames && stats.topGames.topRated && stats.topGames.topRated.length > 0) { %>
                                <div class="space-y-4">
                                    <% stats.topGames.topRated.forEach((game, index) => { %>
                                    <div class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-50 transition-colors">
                                        <div class="flex h-8 w-8 items-center justify-center rounded-full bg-gradient-to-r from-yellow-500 to-orange-600 text-white font-bold text-sm">
                                            <%= index + 1 %>
                                        </div>
                                        <div class="flex-1">
                                            <p class="text-sm font-medium text-gray-900"><%= game.title %></p>
                                            <div class="flex items-center gap-2">
                                                <div class="flex items-center">
                                                    <% for(let i = 1; i <= 5; i++) { %>
                                                        <svg class="w-3 h-3 <%= parseFloat(game.avg_rating) >= i ? 'text-yellow-400' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
                                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                                        </svg>
                                                    <% } %>
                                                </div>
                                                <span class="text-xs text-gray-500">
                                                    <%= __('dashboard.overview.ratings_count', { rating: parseFloat(game.avg_rating).toFixed(1), count: game.rating_count }) %>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <div class="text-center py-8">
                                    <svg class="w-16 h-16 text-gray-300 mb-2 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                                    </svg>
                                    <p class="text-sm text-gray-500"><%= __('dashboard.overview.no_ratings_data') %></p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity & User Stats -->
                <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
                    <!-- Recent Users -->
                    <div class="rounded-xl bg-white shadow-md hover:shadow-xl transition-all duration-200">
                        <div class="border-b border-gray-200/50 px-4 sm:px-6 py-4">
                            <h3 class="text-base sm:text-lg font-semibold text-gray-900 flex items-center gap-2">
                                <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                </svg>
                                <%= __('dashboard.overview.recent_users') %>
                            </h3>
                            <p class="text-xs sm:text-sm text-gray-500"><%= __('dashboard.overview.latest_registered_users') %></p>
                        </div>
                        <div class="p-4 sm:p-6">
                            <% if (stats && stats.recent && stats.recent.users && stats.recent.users.length > 0) { %>
                                <div class="space-y-4">
                                    <% stats.recent.users.forEach(user => { %>
                                    <div class="flex items-start gap-3 p-3 rounded-lg hover:bg-gray-50 transition-colors">
                                        <div class="flex h-10 w-10 items-center justify-center rounded-full bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-semibold">
                                            <%= user.username.charAt(0).toUpperCase() %>
                                        </div>
                                        <div class="flex-1">
                                            <p class="text-sm font-medium text-gray-900">
                                                <%= user.first_name && user.last_name ? `${user.first_name} ${user.last_name}` : user.username %>
                                            </p>
                                            <div class="flex items-center gap-2 text-xs text-gray-500">
                                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-<%= user.user_type === 'admin' ? 'red' : 'blue' %>-100 text-<%= user.user_type === 'admin' ? 'red' : 'blue' %>-800">
                                                    <%= user.user_type %>
                                                </span>
                                                <span><%= __('dashboard.overview.level', { level: user.level || 1 }) %></span>
                                                <span>•</span>
                                                <span><%= new Date(user.created_at).toLocaleDateString() %></span>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <div class="text-center py-8">
                                    <svg class="w-16 h-16 text-gray-300 mb-2 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
                                    </svg>
                                    <p class="text-sm text-gray-500"><%= __('dashboard.overview.no_recent_users') %></p>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Recent Comments -->
                    <div class="rounded-xl bg-white shadow-md hover:shadow-xl transition-all duration-200">
                        <div class="border-b border-gray-200/50 px-4 sm:px-6 py-4">
                            <h3 class="text-base sm:text-lg font-semibold text-gray-900 flex items-center gap-2">
                                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                                </svg>
                                <%= __('dashboard.overview.recent_comments') %>
                            </h3>
                            <p class="text-xs sm:text-sm text-gray-500"><%= __('dashboard.overview.latest_game_comments') %></p>
                        </div>
                        <div class="p-4 sm:p-6">
                            <% if (stats && stats.recent && stats.recent.comments && stats.recent.comments.length > 0) { %>
                                <div class="space-y-4">
                                    <% stats.recent.comments.forEach(comment => { %>
                                    <div class="p-3 rounded-lg hover:bg-gray-50 transition-colors border-l-4 border-green-500">
                                        <div class="flex items-start justify-between mb-2">
                                            <div class="flex items-center gap-2">
                                                <span class="text-sm font-medium text-gray-900"><%= comment.username || 'Anonymous' %></span>
                                                <span class="text-xs text-gray-500"><%= __('dashboard.overview.on') %></span>
                                                <span class="text-xs font-medium text-blue-600"><%= comment.game_title || __('dashboard.overview.unknown_game') %></span>
                                            </div>
                                            <span class="text-xs text-gray-400"><%= new Date(comment.created_at).toLocaleDateString() %></span>
                                        </div>
                                        <p class="text-sm text-gray-700 line-clamp-2">
                                            <%= comment.comment.length > 100 ? comment.comment.substring(0, 100) + '...' : comment.comment %>
                                        </p>
                                    </div>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <div class="text-center py-8">
                                    <svg class="w-16 h-16 text-gray-300 mb-2 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                                    </svg>
                                    <p class="text-sm text-gray-500"><%= __('dashboard.overview.no_recent_comments') %></p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Popular Searches -->
                <% if (stats && stats.popularSearches && stats.popularSearches.length > 0) { %>
                <div class="mt-6 rounded-xl bg-white shadow-md hover:shadow-xl transition-all duration-200">
                    <div class="border-b border-gray-200/50 px-4 sm:px-6 py-4">
                        <h3 class="text-base sm:text-lg font-semibold text-gray-900 flex items-center gap-2">
                            <svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                            <%= __('dashboard.overview.popular_searches') %>
                        </h3>
                        <p class="text-xs sm:text-sm text-gray-500"><%= __('dashboard.overview.most_searched_terms') %></p>
                    </div>
                    <div class="p-4 sm:p-6">
                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
                            <% stats.popularSearches.slice(0, 9).forEach((search, index) => { %>
                            <div class="flex items-center justify-between p-3 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors">
                                <div class="flex items-center gap-3">
                                    <div class="flex h-6 w-6 items-center justify-center rounded-full bg-purple-100 text-purple-600 text-xs font-bold">
                                        <%= index + 1 %>
                                    </div>
                                    <span class="text-sm font-medium text-gray-900 truncate">
                                        <%= search.query %>
                                    </span>
                                </div>
                                <span class="text-xs text-gray-500 ml-2">
                                    <%= search.search_count %>
                                </span>
                            </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
        
        <!-- Footer - positioned at bottom -->
        <%- include('../modules/footer.block.ejs', { page }) %>
    </div>
</div>

<%- include('../footer.ejs', { page }) %>
