<div class="p-6" data-cron-password="<%= data.cronPassword || '' %>">
    <div class="flex items-start justify-between">
        <h3 class="text-lg font-semibold text-gray-900">
            <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg><%= title %>
        </h3>

        <button type="button" class="text-gray-400 hover:text-gray-600 transition-colors duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
    </div>

    <div class="mt-6 space-y-6">
        <!-- Status Information -->
        <div class="bg-blue-50 rounded-lg p-4">
            <h4 class="text-sm font-semibold text-blue-800 mb-2"><%= __('dashboard.widgets.static.cronjobs.status_title') %></h4>
            <div class="text-xs text-blue-700 space-y-1">
                <div>• <%= __('dashboard.widgets.static.cronjobs.status_label') %> <span class="font-medium"><%= data.cronEnabled ? __('dashboard.widgets.static.cronjobs.enabled') : __('dashboard.widgets.static.cronjobs.disabled') %></span></div>
                <div>• <%= __('dashboard.widgets.static.cronjobs.password_protected') %> <span class="font-medium"><%= data.cronPassword ? __('dashboard.widgets.static.cronjobs.yes') : __('dashboard.widgets.static.cronjobs.no') %></span></div>
                <div>• <%= __('dashboard.widgets.static.cronjobs.endpoints') %></div>
            </div>
        </div>

        <!-- Available Cron Jobs -->
        <div class="space-y-4">
            <h4 class="text-sm font-semibold text-gray-800 border-b border-gray-200 pb-1"><%= __('dashboard.widgets.static.cronjobs.available_title') %></h4>
            
            <!-- Daily Cleanup -->
            <div class="border border-gray-200 rounded-lg overflow-hidden">
                <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <h5 class="text-sm font-medium text-gray-900"><%= __('dashboard.widgets.static.cronjobs.daily_cleanup') %></h5>
                        <div class="flex items-center gap-2">
                            <span class="text-xs text-gray-500"><%= __('dashboard.widgets.static.cronjobs.recommended_daily') %></span>
                            <button type="button" 
                                    class="cronRunBtn px-3 py-1 bg-green-600 text-white text-xs rounded hover:bg-green-700 transition-colors"
                                    data-job="daily-cleanup">
                                <%= __('dashboard.widgets.static.cronjobs.run_now') %>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="p-4">
                    <div class="space-y-3">
                        <div>
                            <p class="text-sm text-gray-700 mb-2"><strong><%= __('dashboard.widgets.static.cronjobs.purpose') %>:</strong> <%= __('dashboard.widgets.static.cronjobs.daily_cleanup_purpose') %></p>
                            <div class="text-xs text-gray-600 space-y-1">
                                <div>• <%= __('dashboard.widgets.static.cronjobs.daily_cleanup_task_1') %></div>
                                <div>• <%= __('dashboard.widgets.static.cronjobs.daily_cleanup_task_2') %></div>
                                <div>• <%= __('dashboard.widgets.static.cronjobs.daily_cleanup_task_3') %></div>
                                <div>• <%= __('dashboard.widgets.static.cronjobs.daily_cleanup_task_4') %></div>
                            </div>
                        </div>
                        <div class="bg-gray-50 rounded p-3">
                            <div class="text-xs text-gray-700">
                                <div class="font-medium mb-1"><%= __('dashboard.widgets.static.cronjobs.cron_command') %>:</div>
                                <code class="block bg-white p-2 rounded border text-xs">
0 2 * * * curl -s "https://yoursite.com/cronjobs/daily-cleanup?password=YOUR_CRON_PASSWORD"
                                </code>
                            </div>
                        </div>
                        <div class="bg-gray-50 rounded p-3">
                            <div class="text-xs text-gray-700">
                                <div class="font-medium mb-1"><%= __('dashboard.widgets.static.cronjobs.manual_url') %>:</div>
                                <code class="block bg-white p-2 rounded border text-xs break-all">
GET /cronjobs/daily-cleanup?password=YOUR_CRON_PASSWORD
                                </code>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Weekly Maintenance -->
            <div class="border border-gray-200 rounded-lg overflow-hidden">
                <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <h5 class="text-sm font-medium text-gray-900"><%= __('dashboard.widgets.static.cronjobs.weekly_maintenance') %></h5>
                        <div class="flex items-center gap-2">
                            <span class="text-xs text-gray-500"><%= __('dashboard.widgets.static.cronjobs.recommended_weekly') %></span>
                            <button type="button" 
                                    class="cronRunBtn px-3 py-1 bg-green-600 text-white text-xs rounded hover:bg-green-700 transition-colors"
                                    data-job="weekly-maintenance">
                                <%= __('dashboard.widgets.static.cronjobs.run_now') %>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="p-4">
                    <div class="space-y-3">
                        <div>
                            <p class="text-sm text-gray-700 mb-2"><strong><%= __('dashboard.widgets.static.cronjobs.purpose') %>:</strong> <%= __('dashboard.widgets.static.cronjobs.weekly_maintenance_purpose') %></p>
                            <div class="text-xs text-gray-600 space-y-1">
                                <div>• <%= __('dashboard.widgets.static.cronjobs.weekly_maintenance_task_1') %></div>
                                <div>• <%= __('dashboard.widgets.static.cronjobs.weekly_maintenance_task_2') %></div>
                                <div>• <%= __('dashboard.widgets.static.cronjobs.weekly_maintenance_task_3') %></div>
                                <div>• <%= __('dashboard.widgets.static.cronjobs.weekly_maintenance_task_4') %></div>
                            </div>
                        </div>
                        <div class="bg-gray-50 rounded p-3">
                            <div class="text-xs text-gray-700">
                                <div class="font-medium mb-1"><%= __('dashboard.widgets.static.cronjobs.cron_command') %>:</div>
                                <code class="block bg-white p-2 rounded border text-xs">
0 3 * * 0 curl -s "https://yoursite.com/cronjobs/weekly-maintenance?password=YOUR_CRON_PASSWORD"
                                </code>
                            </div>
                        </div>
                        <div class="bg-gray-50 rounded p-3">
                            <div class="text-xs text-gray-700">
                                <div class="font-medium mb-1"><%= __('dashboard.widgets.static.cronjobs.manual_url') %>:</div>
                                <code class="block bg-white p-2 rounded border text-xs break-all">
GET /cronjobs/weekly-maintenance?password=YOUR_CRON_PASSWORD
                                </code>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Monthly Reports -->
            <div class="border border-gray-200 rounded-lg overflow-hidden">
                <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <h5 class="text-sm font-medium text-gray-900"><%= __('dashboard.widgets.static.cronjobs.monthly_reports') %></h5>
                        <div class="flex items-center gap-2">
                            <span class="text-xs text-gray-500"><%= __('dashboard.widgets.static.cronjobs.recommended_monthly') %></span>
                            <button type="button" 
                                    class="cronRunBtn px-3 py-1 bg-green-600 text-white text-xs rounded hover:bg-green-700 transition-colors"
                                    data-job="monthly-reports">
                                <%= __('dashboard.widgets.static.cronjobs.run_now') %>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="p-4">
                    <div class="space-y-3">
                        <div>
                            <p class="text-sm text-gray-700 mb-2"><strong><%= __('dashboard.widgets.static.cronjobs.purpose') %>:</strong> <%= __('dashboard.widgets.static.cronjobs.monthly_reports_purpose') %></p>
                            <div class="text-xs text-gray-600 space-y-1">
                                <div>• <%= __('dashboard.widgets.static.cronjobs.monthly_reports_task_1') %></div>
                                <div>• <%= __('dashboard.widgets.static.cronjobs.monthly_reports_task_2') %></div>
                                <div>• <%= __('dashboard.widgets.static.cronjobs.monthly_reports_task_3') %></div>
                                <div>• <%= __('dashboard.widgets.static.cronjobs.monthly_reports_task_4') %></div>
                            </div>
                        </div>
                        <div class="bg-gray-50 rounded p-3">
                            <div class="text-xs text-gray-700">
                                <div class="font-medium mb-1"><%= __('dashboard.widgets.static.cronjobs.cron_command') %>:</div>
                                <code class="block bg-white p-2 rounded border text-xs">
0 4 1 * * curl -s "https://yoursite.com/cronjobs/monthly-reports?password=YOUR_CRON_PASSWORD"
                                </code>
                            </div>
                        </div>
                        <div class="bg-gray-50 rounded p-3">
                            <div class="text-xs text-gray-700">
                                <div class="font-medium mb-1"><%= __('dashboard.widgets.static.cronjobs.manual_url') %>:</div>
                                <code class="block bg-white p-2 rounded border text-xs break-all">
GET /cronjobs/monthly-reports?password=YOUR_CRON_PASSWORD
                                </code>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Weekly Thumbnail Grid -->
            <div class="border border-gray-200 rounded-lg overflow-hidden">
                <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <h5 class="text-sm font-medium text-gray-900"><%= __('dashboard.widgets.static.cronjobs.thumbnail_grid_generation') %></h5>
                        <div class="flex items-center gap-2">
                            <span class="text-xs text-gray-500"><%= __('dashboard.widgets.static.cronjobs.recommended_weekly') %></span>
                            <button type="button" 
                                    class="cronRunBtn px-3 py-1 bg-green-600 text-white text-xs rounded hover:bg-green-700 transition-colors"
                                    data-job="weekly-thumbnail-grid">
                                <%= __('dashboard.widgets.static.cronjobs.run_now') %>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="p-4">
                    <div class="space-y-3">
                        <div>
                            <p class="text-sm text-gray-700 mb-2"><strong><%= __('dashboard.widgets.static.cronjobs.purpose') %>:</strong> <%= __('dashboard.widgets.static.cronjobs.thumbnail_grid_purpose') %></p>
                            <div class="text-xs text-gray-600 space-y-1">
                                <div>• <%= __('dashboard.widgets.static.cronjobs.thumbnail_grid_task_1') %></div>
                                <div>• <%= __('dashboard.widgets.static.cronjobs.thumbnail_grid_task_2') %></div>
                                <div>• <%= __('dashboard.widgets.static.cronjobs.thumbnail_grid_task_3') %></div>
                                <div>• <%= __('dashboard.widgets.static.cronjobs.thumbnail_grid_task_4') %></div>
                            </div>
                        </div>
                        <div class="bg-gray-50 rounded p-3">
                            <div class="text-xs text-gray-700">
                                <div class="font-medium mb-1"><%= __('dashboard.widgets.static.cronjobs.cron_command') %>:</div>
                                <code class="block bg-white p-2 rounded border text-xs">
0 5 * * 0 curl -s "https://yoursite.com/cronjobs/weekly-thumbnail-grid?password=YOUR_CRON_PASSWORD"
                                </code>
                            </div>
                        </div>
                        <div class="bg-gray-50 rounded p-3">
                            <div class="text-xs text-gray-700">
                                <div class="font-medium mb-1"><%= __('dashboard.widgets.static.cronjobs.manual_url') %>:</div>
                                <code class="block bg-white p-2 rounded border text-xs break-all">
GET /cronjobs/weekly-thumbnail-grid?password=YOUR_CRON_PASSWORD
                                </code>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Setup Instructions -->
        <div class="bg-yellow-50 rounded-lg p-4">
            <h4 class="text-sm font-semibold text-yellow-800 mb-2"><%= __('dashboard.widgets.static.cronjobs.setup_instructions') %></h4>
            <div class="text-xs text-yellow-700 space-y-2">
                <div><strong>1. Enable Cron Jobs</strong> <%= __('dashboard.widgets.static.cronjobs.setup_step_1') %></div>
                <div><strong>2. Replace URLs</strong> <%= __('dashboard.widgets.static.cronjobs.setup_step_2') %></div>
                <div><strong>3. Set Password</strong> <%= __('dashboard.widgets.static.cronjobs.setup_step_3') %></div>
                <div><strong>4. Add to Crontab</strong> <%= __('dashboard.widgets.static.cronjobs.setup_step_4') %></div>
                <div><strong>5. Monitor Logs</strong> <%= __('dashboard.widgets.static.cronjobs.setup_step_5') %></div>
            </div>
        </div>

        <!-- Last Run Times -->
        <% if (data.lastRuns) { %>
        <div class="bg-green-50 rounded-lg p-4">
            <h4 class="text-sm font-semibold text-green-800 mb-2"><%= __('dashboard.widgets.static.cronjobs.last_execution_times') %></h4>
            <div class="text-xs text-green-700 space-y-1">
                <div>• <%= __('dashboard.widgets.static.cronjobs.last_daily_cleanup') %>: <%= data.lastRuns.cleanup || __('dashboard.widgets.static.cronjobs.never') %></div>
                <div>• <%= __('dashboard.widgets.static.cronjobs.last_weekly_maintenance') %>: <%= data.lastRuns.maintenance || __('dashboard.widgets.static.cronjobs.never') %></div>
                <div>• <%= __('dashboard.widgets.static.cronjobs.last_monthly_reports') %>: <%= data.lastRuns.reports || __('dashboard.widgets.static.cronjobs.never') %></div>
                <div>• <%= __('dashboard.widgets.static.cronjobs.last_thumbnail_grid') %>: <%= data.lastRuns.thumbnailGrid || __('dashboard.widgets.static.cronjobs.never') %></div>
            </div>
        </div>
        <% } %>
    </div>
</div>