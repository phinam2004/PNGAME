<div class="p-6">
    <div class="flex items-start justify-between">
        <h3 class="text-lg font-semibold text-gray-900">
            <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg><%= title %>
        </h3>

        <button type="button" class="text-gray-400 hover:text-gray-600 transition-colors duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>

    <form system-form class="mt-4 space-y-4" enctype="multipart/form-data">
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700"><%= __('dashboard.widgets.update.ads.advertisement_name') %></label>
                <input type="text" name="name" required value="<%= data.name || '' %>" class="block w-full rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm text-gray-700 shadow-md placeholder-gray-400 transition-all duration-200 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:shadow-lg" placeholder="<%= __('dashboard.widgets.update.ads.advertisement_name_placeholder') %>">
            </div>

            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700"><%= __('dashboard.widgets.update.ads.ad_placement') %></label>
                <select name="placement_id" required class="block w-full rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm text-gray-700 shadow-md transition-all duration-200 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:shadow-lg">
                    <option value=""><%= __('dashboard.widgets.update.ads.select_placement') %>...</option>
                    <% if (data.placements && data.placements.length > 0) { %>
                        <% data.placements.forEach(placement => { %>
                            <option value="<%= placement.id %>" <%= data.placement_id == placement.id ? 'selected' : '' %>>
                                <%= placement.name %> (<%= placement.width %>×<%= placement.height %> - <%= placement.placement_type %>)
                            </option>
                        <% }); %>
                    <% } else { %>
                        <option value=""><%= __('dashboard.widgets.update.ads.no_placements_available') %></option>
                    <% } %>
                </select>
                <p class="mt-1 text-xs text-gray-500"><%= __('dashboard.widgets.update.ads.placement_help') %></p>
            </div>
        </div>

        <div>
            <label class="mb-1 block text-sm font-medium text-gray-700"><%= __('dashboard.widgets.update.ads.ad_code') %></label>
            <textarea name="ad_code" required rows="8" class="block w-full rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm text-gray-700 shadow-md placeholder-gray-400 transition-all duration-200 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:shadow-lg font-mono" placeholder="<%= __('dashboard.widgets.update.ads.ad_code_placeholder') %>"><%- data.ad_code || '' %></textarea>
            <p class="mt-1 text-xs text-gray-500"><%= __('dashboard.widgets.update.ads.ad_code_help') %></p>
        </div>

        <div>
            <label class="mb-1 block text-sm font-medium text-gray-700"><%= __('dashboard.widgets.update.ads.fallback_ad_code') %> <span class="text-gray-500 text-xs">(<%= __('dashboard.widgets.update.ads.optional') %>)</span></label>
            <textarea name="fallback_ad_code" rows="6" class="block w-full rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm text-gray-700 shadow-md placeholder-gray-400 transition-all duration-200 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:shadow-lg font-mono" placeholder="<%= __('dashboard.widgets.update.ads.fallback_ad_code_placeholder') %>"><%- data.fallback_ad_code || '' %></textarea>
            <p class="mt-1 text-xs text-gray-500"><%= __('dashboard.widgets.update.ads.fallback_ad_code_help') %></p>
        </div>

        <div class="bg-yellow-50 p-4 rounded-lg">
            <h4 class="text-sm font-medium text-yellow-900 mb-2">
                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L5.082 15.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
                <%= __('dashboard.widgets.update.ads.guidelines_title') %>
            </h4>
            <ul class="text-xs text-yellow-700 space-y-1">
                <li>• <%= __('dashboard.widgets.update.ads.guideline_1') %></li>
                <li>• <%= __('dashboard.widgets.update.ads.guideline_2') %></li>
                <li>• <%= __('dashboard.widgets.update.ads.guideline_3') %></li>
                <li>• <%= __('dashboard.widgets.update.ads.guideline_4') %></li>
                <li>• <%= __('dashboard.widgets.update.ads.guideline_5') %></li>
            </ul>
        </div>

        <div class="bg-blue-50 p-4 rounded-lg">
            <h4 class="text-sm font-medium text-blue-900 mb-2">
                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <%= __('dashboard.widgets.update.ads.adsense_info_title') %>
            </h4>
            <p class="text-xs text-blue-700">
                <%= __('dashboard.widgets.update.ads.adsense_info_message') %>
            </p>
        </div>

        <div>
            <label class="mb-1 block text-sm font-medium text-gray-700"><%= __('dashboard.widgets.update.ads.active') %></label>
            <select name="is_active" class="block w-full rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm text-gray-700 shadow-md transition-all duration-200 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:shadow-lg">
                <option value="1" <%= data.is_active == 1 ? 'selected' : '' %>><%= __('dashboard.widgets.update.ads.active_option') %></option>
                <option value="0" <%= data.is_active == 0 ? 'selected' : '' %>><%= __('dashboard.widgets.update.ads.inactive_option') %></option>
            </select>
        </div>

        <div class="mt-6 text-right">
            <button type="submit" class="inline-flex items-center gap-1 sm:gap-2 rounded-xl bg-gradient-to-r from-blue-600 to-indigo-600 px-3 sm:px-4 py-2 text-xs sm:text-sm font-medium text-white shadow-xl transition-all duration-200 hover:from-blue-700 hover:to-indigo-700 hover:shadow-2xl hover:-translate-y-1">
                <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg><%= __('dashboard.widgets.update.ads.submit_button') %>
            </button>
        </div>
    </form>
</div>