    <form system-form class="mt-4 space-y-6">
        <!-- Site Branding Section -->
        <div>
            <h4 class="text-sm font-semibold text-gray-800 mb-3 border-b border-gray-200 pb-1"><%= __('dashboard.widgets.update.settings_system.site_branding') %></h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label for="site_name" class="mb-1 block text-sm font-medium text-gray-700"><%= __('dashboard.widgets.update.settings_system.site_name') %></label>
                    <input type="text" id="site_name" name="site_name" value="<%= data.site_name || '' %>" placeholder="<%= __('dashboard.widgets.update.settings_system.site_name_placeholder') %>"
                        class="block w-full rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm text-gray-700 shadow-md placeholder-gray-400 transition-all duration-200 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:shadow-lg">
                </div>
                
                <div>
                    <label for="site_logo" class="mb-1 block text-sm font-medium text-gray-700"><%= __('dashboard.widgets.update.settings_system.site_logo') %></label>
                    <input type="file" id="site_logo" name="site_logo" accept=".png,.jpg,.jpeg,.webp"
                        class="block w-full rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm text-gray-700 shadow-md transition-all duration-200 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:shadow-lg">
                    <% if (data.site_logo) { %>
                        <div class="mt-2">
                            <% 
                                let logoImageUrl = data.site_logo;
                                // Check if it's the new JSON format for optimized images
                                try {
                                    if (typeof data.site_logo === 'string' && data.site_logo.startsWith('{')) {
                                        let parsedData = JSON.parse(data.site_logo);
                                        if (parsedData.webp && parsedData.webp.standard) {
                                            logoImageUrl = `/${parsedData.webp.standard.relativePath}`;
                                        } else if (parsedData.original && parsedData.original.standard) {
                                            logoImageUrl = `/${parsedData.original.standard.relativePath}`;
                                        }
                                    } else {
                                        logoImageUrl = data.site_logo.startsWith('/') ? data.site_logo : '/' + data.site_logo;
                                    }
                                } catch(e) {
                                    logoImageUrl = data.site_logo.startsWith('/') ? data.site_logo : '/' + data.site_logo;
                                }
                            %>
                            <img src="<%= logoImageUrl %>" alt="Current logo" class="h-12 object-contain bg-gray-50 rounded p-1">
                            <p class="mt-1 text-xs text-gray-500"><%= __('dashboard.widgets.update.settings_system.current_logo_help') %></p>
                        </div>
                    <% } else { %>
                        <p class="mt-1 text-xs text-gray-500"><%= __('dashboard.widgets.update.settings_system.upload_logo_help') %></p>
                    <% } %>
                </div>
            </div>
            
            <div class="mt-4">
                <label for="site_description" class="mb-1 block text-sm font-medium text-gray-700"><%= __('dashboard.widgets.update.settings_system.site_description') %></label>
                <textarea id="site_description" name="site_description" rows="2" placeholder="<%= __('dashboard.widgets.update.settings_system.site_description_placeholder') %>"
                    class="block w-full rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm text-gray-700 shadow-md placeholder-gray-400 transition-all duration-200 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:shadow-lg"><%= data.site_description || '' %></textarea>
            </div>
            
            <div class="mt-4">
                <label for="site_favicon" class="mb-1 block text-sm font-medium text-gray-700"><%= __('dashboard.widgets.update.settings_system.site_favicon') %></label>
                <input type="file" id="site_favicon" name="site_favicon" accept=".png,.jpg,.jpeg,.ico,.webp"
                    class="block w-full rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm text-gray-700 shadow-md transition-all duration-200 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:shadow-lg">
                <% if (data.site_favicon) { %>
                    <div class="mt-2 flex items-center space-x-3">
                        <% 
                            let faviconImageUrl = data.site_favicon;
                            // Check if it's the new JSON format for optimized images
                            try {
                                if (typeof data.site_favicon === 'string' && data.site_favicon.startsWith('{')) {
                                    let parsedData = JSON.parse(data.site_favicon);
                                    if (parsedData.webp && parsedData.webp.standard) {
                                        faviconImageUrl = `/${parsedData.webp.standard.relativePath}`;
                                    } else if (parsedData.original && parsedData.original.standard) {
                                        faviconImageUrl = `/${parsedData.original.standard.relativePath}`;
                                    }
                                } else {
                                    faviconImageUrl = data.site_favicon.startsWith('/') ? data.site_favicon : '/' + data.site_favicon;
                                }
                            } catch(e) {
                                faviconImageUrl = data.site_favicon.startsWith('/') ? data.site_favicon : '/' + data.site_favicon;
                            }
                        %>
                        <img src="<%= faviconImageUrl %>" alt="Current favicon" class="w-8 h-8 object-contain bg-gray-50 rounded border">
                        <p class="text-xs text-gray-500"><%= __('dashboard.widgets.update.settings_system.current_favicon_help') %></p>
                    </div>
                <% } else { %>
                    <p class="mt-1 text-xs text-gray-500"><%= __('dashboard.widgets.update.settings_system.upload_favicon_help') %></p>
                <% } %>
            </div>
        </div>


